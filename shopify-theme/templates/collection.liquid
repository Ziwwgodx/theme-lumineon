{% comment %}
  Template Collection - Page collection
{% endcomment %}

{% assign page_title = collection.title | append: ' - Néons LED Personnalisés | LumiNéon' %}
{% assign page_description = collection.description | strip_html | truncate: 155 | default: 'Collection de néons LED personnalisés ' | append: collection.title | append: '. Fabrication française haut de gamme, garantie 2 ans, livraison express France entière.' %}

<!-- SEO Meta Tags -->
<script>
document.title = '{{ page_title }}';
if (document.querySelector('meta[name="description"]')) {
  document.querySelector('meta[name="description"]').setAttribute('content', '{{ page_description }}');
}
</script>

<div class="min-h-screen bg-gray-900 text-white py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Breadcrumb -->
    <nav class="mb-8" aria-label="Fil d'Ariane">
      <ol class="flex items-center space-x-2 text-sm text-gray-400">
        <li><a href="/" class="hover:text-cyan-400 transition-colors">Accueil</a></li>
        <li><span class="mx-2">/</span></li>
        <li class="text-white">{{ collection.title | default: 'Néons Personnalisés' }}</li>
      </ol>
    </nav>

    <!-- Collection Header -->
    <div class="text-center mb-16">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6" itemprop="headline">
        <span class="neon-text-gradient">{{ collection.title }}</span>
      </h1>
      
      {% if collection.description != blank %}
        <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed" itemprop="description">
          {{ collection.description }}
        </p>
      {% else %}
        <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed" itemprop="description">
          Découvrez notre collection de néons LED personnalisés haut de gamme. 
          Fabrication française artisanale, garantie 2 ans, installation professionnelle.
        </p>
      {% endif %}
      
      <div class="mt-6 flex items-center justify-center gap-4 text-sm text-gray-400">
        <span>{{ collection.products_count }} néon{% if collection.products_count > 1 %}s{% endif %} personnalisé{% if collection.products_count > 1 %}s{% endif %}</span>
        {% if collection.products_count > 0 %}
          <span>•</span>
          <span>À partir de {{ collection.products.first.price | money }}</span>
        {% endif %}
      </div>
    </div>

    {% if collection.products.size > 0 %}
      
      <!-- Filters and Sort -->
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4 mb-12">
        
        <!-- Filters -->
        <div class="flex flex-wrap gap-4">
          <button class="filter-btn active px-4 py-2 rounded-full font-medium transition-all duration-300 bg-gradient-to-r from-cyan-500 to-purple-600 text-white shadow-neon-cyan" data-filter="all">
            Tous les néons
          </button>
          
          <!-- Price Filters -->
          <button class="filter-btn px-4 py-2 rounded-full font-medium transition-all duration-300 bg-gray-800 text-gray-400 hover:text-white hover:bg-gray-700 border border-gray-700" data-filter="under-500">
            Moins de 500€
          </button>
          <button class="filter-btn px-4 py-2 rounded-full font-medium transition-all duration-300 bg-gray-800 text-gray-400 hover:text-white hover:bg-gray-700 border border-gray-700" data-filter="500-1000">
            500€ - 1000€
          </button>
          <button class="filter-btn px-4 py-2 rounded-full font-medium transition-all duration-300 bg-gray-800 text-gray-400 hover:text-white hover:bg-gray-700 border border-gray-700" data-filter="over-1000">
            Plus de 1000€
          </button>
        </div>

        <!-- Sort -->
        <div class="flex items-center gap-2">
          <label for="sort-select" class="text-sm text-gray-400">Trier par :</label>
          <select id="sort-select" class="px-3 py-2 bg-gray-800 border border-gray-600 rounded-lg text-white text-sm focus:border-cyan-400 focus:outline-none">
            <option value="manual">Recommandés</option>
            <option value="price-ascending">Prix croissant</option>
            <option value="price-descending">Prix décroissant</option>
            <option value="title-ascending">A-Z</option>
            <option value="title-descending">Z-A</option>
            <option value="created-descending">Plus récents</option>
          </select>
        </div>
      </div>

      <!-- Products Grid -->
      <div id="products-grid" class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8" itemscope itemtype="https://schema.org/ItemList">
        {% for product in collection.products %}
          <div class="product-item group" 
               data-price="{{ product.price }}"
               data-title="{{ product.title | downcase }}"
               data-date="{{ product.created_at | date: '%s' }}"
               itemscope itemtype="https://schema.org/Product"
               itemprop="itemListElement">
            
            <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl overflow-hidden border border-gray-700 transition-all duration-300 hover:border-cyan-500/50 hover:shadow-lg hover:shadow-cyan-500/20 interactive-card">
              
              <!-- Product Image -->
              <div class="aspect-square overflow-hidden relative">
                {% if product.featured_image %}
                  <img 
                    src="{{ product.featured_image | img_url: '400x400' }}" 
                    alt="Néon LED {{ product.title | escape }} - Fabrication française haut de gamme"
                    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                    loading="lazy"
                    width="400"
                    height="400"
                    itemprop="image"
                  />
                {% else %}
                  <div class="w-full h-full bg-gray-700 flex items-center justify-center">
                    <svg class="w-16 h-16 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                {% endif %}
                
                <!-- Sale Badge -->
                {% if product.compare_at_price > product.price %}
                  <div class="absolute top-3 left-3 px-2 py-1 bg-red-500 rounded-full text-white text-xs font-bold">
                    -{{ product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price }}%
                  </div>
                {% endif %}
                
                <!-- Quick Actions -->
                <div class="absolute top-3 right-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                  <button class="w-8 h-8 bg-white/20 backdrop-blur-sm rounded-full flex items-center justify-center text-white hover:bg-white/30 transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                    </svg>
                  </button>
                </div>
              </div>

              <!-- Product Info -->
              <div class="p-6">
                <h3 class="text-lg font-semibold mb-2 text-white group-hover:text-cyan-400 transition-colors duration-300 line-clamp-2" itemprop="name">
                  {{ product.title }}
                </h3>
                
                {% if product.description != blank %}
                  <p class="text-gray-400 text-sm mb-4 line-clamp-2" itemprop="description">
                    {{ product.description | strip_html | truncate: 120 }}
                  </p>
                {% else %}
                  <p class="text-gray-400 text-sm mb-4 line-clamp-2" itemprop="description">
                    Néon LED personnalisé haut de gamme avec fabrication française artisanale et garantie 2 ans.
                  </p>
                {% endif %}
                
                <!-- Price -->
                <div class="flex items-center justify-between mb-4" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
                  <div class="flex items-center gap-2">
                    <span class="text-xl font-bold text-cyan-400" itemprop="price" content="{{ product.price | money_without_currency }}">
                      {{ product.price | money }}
                    </span>
                    <meta itemprop="priceCurrency" content="{{ cart.currency.iso_code }}">
                    <meta itemprop="availability" content="{% if product.available %}https://schema.org/InStock{% else %}https://schema.org/OutOfStock{% endif %}">
                    {% if product.compare_at_price > product.price %}
                      <span class="text-sm text-gray-500 line-through">
                        {{ product.compare_at_price | money }}
                      </span>
                    {% endif %}
                  </div>
                  
                  <!-- Rating -->
                  <div class="flex items-center gap-1" itemprop="aggregateRating" itemscope itemtype="https://schema.org/AggregateRating">
                    {% for i in (1..5) %}
                      <svg class="w-3 h-3 text-yellow-400 fill-current" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                    {% endfor %}
                    <meta itemprop="ratingValue" content="4.8">
                    <meta itemprop="reviewCount" content="127">
                  </div>
                </div>

                <!-- Actions -->
                <div class="flex gap-2">
                  <a 
                    href="{{ product.url }}"
                    class="flex-1 text-center px-4 py-2 bg-gradient-to-r from-cyan-500 to-purple-600 rounded-lg text-white font-medium transition-all duration-300 hover:scale-105"
                  >
                    Voir ce néon
                  </a>
                  
                  {% if product.available %}
                    <button 
                      onclick="quickAddToCart({{ product.selected_or_first_available_variant.id }})"
                      class="px-4 py-2 border border-cyan-400 text-cyan-400 rounded-lg font-medium transition-all duration-300 hover:bg-cyan-400 hover:text-gray-900"
                      title="Ajouter au panier"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m0 0h8m-8 0a2 2 0 100 4 2 2 0 000-4zm8 0a2 2 0 100 4 2 2 0 000-4z"></path>
                      </svg>
                    </button>
                  {% else %}
                    <button 
                      disabled
                      class="px-4 py-2 border border-gray-600 text-gray-600 rounded-lg font-medium cursor-not-allowed"
                      title="Rupture de stock"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      <!-- Pagination -->
      {% if paginate.pages > 1 %}
        <div class="mt-16 flex justify-center">
          <nav class="flex items-center gap-2">
            {% if paginate.previous %}
              <a href="{{ paginate.previous.url }}" class="px-4 py-2 bg-gray-800 border border-gray-600 rounded-lg text-white hover:border-cyan-400 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
              </a>
            {% endif %}
            
            {% for part in paginate.parts %}
              {% if part.is_link %}
                <a href="{{ part.url }}" class="px-4 py-2 bg-gray-800 border border-gray-600 rounded-lg text-white hover:border-cyan-400 transition-colors">
                  {{ part.title }}
                </a>
              {% else %}
                <span class="px-4 py-2 bg-gradient-to-r from-cyan-500 to-purple-600 rounded-lg text-white font-semibold">
                  {{ part.title }}
                </span>
              {% endif %}
            {% endfor %}
            
            {% if paginate.next %}
              <a href="{{ paginate.next.url }}" class="px-4 py-2 bg-gray-800 border border-gray-600 rounded-lg text-white hover:border-cyan-400 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            {% endif %}
          </nav>
        </div>
      {% endif %}

    {% else %}
      
      <!-- Empty State -->
      <div class="text-center py-20">
        <svg class="w-24 h-24 text-gray-500 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
        </svg>
        <h2 class="text-2xl font-bold text-white mb-4">Aucun produit trouvé</h2>
        <p class="text-gray-400 mb-8">Cette collection ne contient aucun produit pour le moment.</p>
        <a href="/" class="px-8 py-4 bg-gradient-to-r from-cyan-500 to-purple-600 rounded-full text-white font-semibold transition-all duration-300 hover:scale-105">
          Retour à l'accueil
        </a>
      </div>
      
    {% endif %}
  </div>
</div>


<script>
// Filter functionality
document.addEventListener('DOMContentLoaded', function() {
  const filterBtns = document.querySelectorAll('.filter-btn');
  const productItems = document.querySelectorAll('.product-item');
  const sortSelect = document.getElementById('sort-select');

  // Filter products
  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const filter = btn.dataset.filter;
      
      // Update active button
      filterBtns.forEach(b => {
        b.classList.remove('active', 'bg-gradient-to-r', 'from-cyan-500', 'to-purple-600', 'text-white', 'shadow-neon-cyan');
        b.classList.add('bg-gray-800', 'text-gray-400', 'border', 'border-gray-700');
      });
      btn.classList.add('active', 'bg-gradient-to-r', 'from-cyan-500', 'to-purple-600', 'text-white', 'shadow-neon-cyan');
      btn.classList.remove('bg-gray-800', 'text-gray-400', 'border', 'border-gray-700');

      // Filter items
      productItems.forEach(item => {
        const price = parseInt(item.dataset.price);
        let show = false;

        switch(filter) {
          case 'all':
            show = true;
            break;
          case 'under-500':
            show = price < 50000; // Price in cents
            break;
          case '500-1000':
            show = price >= 50000 && price <= 100000;
            break;
          case 'over-1000':
            show = price > 100000;
            break;
        }

        item.style.display = show ? 'block' : 'none';
      });
    });
  });

  // Sort products
  if (sortSelect) {
    sortSelect.addEventListener('change', () => {
      const sortValue = sortSelect.value;
      const grid = document.getElementById('products-grid');
      const items = Array.from(productItems);

      items.sort((a, b) => {
        switch(sortValue) {
          case 'price-ascending':
            return parseInt(a.dataset.price) - parseInt(b.dataset.price);
          case 'price-descending':
            return parseInt(b.dataset.price) - parseInt(a.dataset.price);
          case 'title-ascending':
            return a.dataset.title.localeCompare(b.dataset.title);
          case 'title-descending':
            return b.dataset.title.localeCompare(a.dataset.title);
          case 'created-descending':
            return parseInt(b.dataset.date) - parseInt(a.dataset.date);
          default:
            return 0;
        }
      });

      // Reorder DOM elements
      items.forEach(item => grid.appendChild(item));
    });
  }
});

// Quick add to cart
function quickAddToCart(variantId) {
  const formData = new FormData();
  formData.append('id', variantId);
  formData.append('quantity', 1);

  fetch('/cart/add.js', {
    method: 'POST',
    body: formData
  })
  .then(response => response.json())
  .then(data => {
    // Update cart count
    updateCartCount();
    
    // Show success message
    showNotification('Produit ajouté au panier !', 'success');
  })
  .catch(error => {
    console.error('Error:', error);
    showNotification('Erreur lors de l\'ajout au panier', 'error');
  });
}

// Update cart count
function updateCartCount() {
  fetch('/cart.js')
    .then(response => response.json())
    .then(cart => {
      const countElements = document.querySelectorAll('[data-cart-count]');
      countElements.forEach(element => {
        element.textContent = cart.item_count;
      });
    });
}

// Show notification
function showNotification(message, type = 'info') {
  const notification = document.createElement('div');
  notification.className = `fixed top-4 right-4 z-50 px-6 py-3 rounded-lg text-white font-medium transition-all duration-300 transform translate-x-full`;
  
  if (type === 'success') {
    notification.classList.add('bg-green-500');
  } else if (type === 'error') {
    notification.classList.add('bg-red-500');
  } else {
    notification.classList.add('bg-blue-500');
  }
  
  notification.textContent = message;
  document.body.appendChild(notification);
  
  // Animate in
  setTimeout(() => {
    notification.classList.remove('translate-x-full');
  }, 100);
  
  // Animate out and remove
  setTimeout(() => {
    notification.classList.add('translate-x-full');
    setTimeout(() => {
      document.body.removeChild(notification);
    }, 300);
  }, 3000);
}

// Line clamp utility
const style = document.createElement('style');
style.textContent = `
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
`;
document.head.appendChild(style);
</script>


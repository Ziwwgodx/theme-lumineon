{% comment %}
  Template Blog - Page blog optimis√©e SEO
{% endcomment %}

{% assign page_title = blog.title | append: ' - Conseils N√©on LED & Inspirations | LumiN√©on' %}
{% assign page_description = 'Blog LumiN√©on : conseils d\'experts n√©on LED, tendances d√©coration lumineuse, guides installation. Inspirations cr√©atives pour vos projets d\'enseignes personnalis√©es.' %}

<div class="min-h-screen bg-gray-900 text-white py-20">
  <!-- SEO Schema -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Blog",
    "name": "{{ blog.title | default: 'Blog LumiN√©on - Conseils N√©on LED' }}",
    "description": "{{ page_description | escape }}",
    "url": "{{ shop.url }}{{ blog.url }}",
    "inLanguage": "fr-FR",
    "about": {
      "@type": "Thing",
      "name": "N√©ons LED personnalis√©s"
    },
    "publisher": {
      "@type": "Organization",
      "name": "LumiN√©on",
      "url": "{{ shop.url }}",
      "logo": {
        "@type": "ImageObject",
        "url": "{{ 'logo.png' | asset_url }}"
      }
    },
    "blogPost": [
      {% for article in blog.articles limit: 10 %}
        {
          "@type": "BlogPosting",
          "headline": "{{ article.title | escape }}",
          "description": "{{ article.excerpt | default: article.content | strip_html | truncate: 155 | escape }}",
          "url": "{{ shop.url }}{{ article.url }}",
          "datePublished": "{{ article.published_at | date: '%Y-%m-%d' }}",
          "dateModified": "{{ article.updated_at | date: '%Y-%m-%d' }}",
          "inLanguage": "fr-FR",
          "author": {
            "@type": "Person",
            "name": "{{ article.author | default: 'LumiN√©on' }}"
          },
          "publisher": {
            "@type": "Organization",
            "name": "LumiN√©on",
            "logo": {
              "@type": "ImageObject",
              "url": "{{ 'logo.png' | asset_url }}"
            }
          },
          "mainEntityOfPage": {
            "@type": "WebPage",
            "@id": "{{ shop.url }}{{ article.url }}"
          }{% if article.image %},
          "image": {
            "@type": "ImageObject",
            "url": "{{ article.image | img_url: 'master' }}",
            "width": 1200,
            "height": 630
          }{% endif %}
        }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ]
  }
  </script>

  <!-- Breadcrumb Schema -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Accueil",
        "item": "{{ shop.url }}"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "{{ blog.title | default: 'Blog' }}",
        "item": "{{ shop.url }}{{ blog.url }}"
      }
    ]
  }
  </script>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Breadcrumb -->
    <nav class="mb-8" aria-label="Fil d'Ariane">
      <ol class="flex items-center space-x-2 text-sm text-gray-400">
        <li><a href="/" class="hover:text-cyan-400 transition-colors">Accueil</a></li>
        <li><span class="mx-2">/</span></li>
        <li class="text-white">{{ blog.title | default: 'Blog' }}</li>
      </ol>
    </nav>

    <!-- Blog Header -->
    <div class="text-center mb-16">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6" itemprop="headline">
        <span style="background: linear-gradient(45deg, #00f5ff, #a855f7, #ec4899); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; filter: drop-shadow(0 0 10px rgba(0, 245, 255, 0.5));">{{ blog.title | default: 'Blog LumiN√©on - Conseils N√©on LED' }}</span>
      </h1>
      
      {% if blog.description != blank %}
        <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed" itemprop="description">
          {{ blog.description }}
        </p>
      {% else %}
        <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed" itemprop="description">
          üåü D√©couvrez nos conseils d'experts en n√©ons LED, tendances d√©coration lumineuse et guides pratiques. 
          <span class="text-cyan-400">Inspirez-vous</span> pour vos projets d'enseignes personnalis√©es !
        </p>
      {% endif %}
      
      <div class="mt-6 flex items-center justify-center gap-4 text-sm text-gray-400">
        <span>{{ blog.articles_count }} article{% if blog.articles_count > 1 %}s{% endif %} sur les n√©ons LED</span>
        {% if blog.tags.size > 0 %}
          <span>‚Ä¢</span>
          <span>{{ blog.tags.size }} cat√©gorie{% if blog.tags.size > 1 %}s{% endif %}</span>
        {% endif %}
      </div>
    </div>

    {% paginate blog.articles by 9 %}
      {% if blog.articles.size > 0 %}
      
        <!-- Tags Filter -->
        {% if blog.tags.size > 0 %}
          <div class="flex flex-wrap justify-center gap-4 mb-12">
            <a href="{{ blog.url }}" class="filter-btn {% unless current_tags %}active{% endunless %} px-6 py-3 rounded-full font-medium transition-all duration-300 {% unless current_tags %}bg-gradient-to-r from-cyan-500 to-purple-600 text-white{% else %}bg-gray-800 text-gray-400 hover:text-white hover:bg-gray-700 border border-gray-700{% endunless %}" style="{% unless current_tags %}box-shadow: 0 0 20px rgba(0, 245, 255, 0.3);{% endunless %}">
              Tous les articles
            </a>
            
            {% for tag in blog.all_tags %}
              <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="filter-btn {% if current_tags contains tag %}active{% endif %} px-6 py-3 rounded-full font-medium transition-all duration-300 {% if current_tags contains tag %}bg-gradient-to-r from-cyan-500 to-purple-600 text-white{% else %}bg-gray-800 text-gray-400 hover:text-white hover:bg-gray-700 border border-gray-700{% endif %}" style="{% if current_tags contains tag %}box-shadow: 0 0 20px rgba(0, 245, 255, 0.3);{% endif %}">
                {{ tag }}
              </a>
            {% endfor %}
          </div>
        {% endif %}

        <!-- Articles Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8" itemscope itemtype="https://schema.org/ItemList">
          {% for article in blog.articles %}
            <article class="group" itemscope itemtype="https://schema.org/BlogPosting" itemprop="itemListElement">
              <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl overflow-hidden border border-gray-700 transition-all duration-300 hover:border-cyan-500/50 hover:shadow-lg hover:shadow-cyan-500/20" style="transform-style: preserve-3d;">
                
                <!-- Article Image -->
                <div class="aspect-video overflow-hidden relative">
                  {% if article.image %}
                    <img 
                      src="{{ article.image | img_url: '600x400' }}" 
                      alt="Article n√©on LED : {{ article.title | escape }} - Conseils LumiN√©on"
                      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                      loading="lazy"
                      width="600"
                      height="400"
                      itemprop="image"
                    />
                  {% else %}
                    <div class="w-full h-full bg-gradient-to-br from-cyan-500/20 to-purple-500/20 flex items-center justify-center">
                      <svg class="w-16 h-16 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                      </svg>
                    </div>
                  {% endif %}
                  
                  <!-- Reading Time Badge -->
                  <div class="absolute top-3 right-3 px-2 py-1 bg-black/50 backdrop-blur-sm rounded-full text-white text-xs">
                    ‚è±Ô∏è {{ article.content | strip_html | split: ' ' | size | divided_by: 200 | at_least: 1 }} min
                  </div>
                  
                  <!-- Tags -->
                  {% if article.tags.size > 0 %}
                    <div class="absolute bottom-3 left-3">
                      <span class="px-2 py-1 bg-cyan-500/20 border border-cyan-500/30 rounded-full text-cyan-300 text-xs">
                        {{ article.tags.first }}
                      </span>
                    </div>
                  {% endif %}
                </div>

                <!-- Article Content -->
                <div class="p-6">
                  <!-- Meta Info -->
                  <div class="flex items-center gap-4 mb-4 text-sm text-gray-400">
                    <div class="flex items-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                      <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}" itemprop="datePublished">
                        {{ article.published_at | date: '%d %B %Y' }}
                      </time>
                    </div>
                    
                    {% if article.author != blank %}
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <span itemprop="author">{{ article.author }}</span>
                      </div>
                    {% endif %}
                  </div>
                  
                  <!-- Title -->
                  <h2 class="text-xl font-semibold mb-3 text-white group-hover:text-cyan-400 transition-colors duration-300" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;" itemprop="headline">
                    {{ article.title }}
                  </h2>
                  
                  <!-- Excerpt -->
                  {% if article.excerpt != blank %}
                    <p class="text-gray-400 text-sm mb-4" style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden;" itemprop="description">
                      {{ article.excerpt | strip_html | truncate: 155 }}
                    </p>
                  {% else %}
                    <p class="text-gray-400 text-sm mb-4" style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden;" itemprop="description">
                      {{ article.content | strip_html | truncate: 155 }}
                    </p>
                  {% endif %}
                  
                  <!-- Read More Button -->
                  <a 
                    href="{{ article.url }}"
                    class="inline-flex items-center gap-2 text-cyan-400 hover:text-cyan-300 transition-colors duration-300 font-medium"
                    itemprop="url"
                  >
                    Lire l'article complet
                    <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </article>
          {% endfor %}
        </div>

        <!-- Pagination -->
        {% if paginate.pages > 1 %}
          <div class="mt-16 flex justify-center">
            <nav class="flex items-center gap-2" aria-label="Pagination">
              {% if paginate.previous %}
                <a href="{{ paginate.previous.url }}" class="px-4 py-2 bg-gray-800 border border-gray-600 rounded-lg text-white hover:border-cyan-400 transition-colors" aria-label="Page pr√©c√©dente">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                  </svg>
                </a>
              {% endif %}
              
              {% for part in paginate.parts %}
                {% if part.is_link %}
                  <a href="{{ part.url }}" class="px-4 py-2 bg-gray-800 border border-gray-600 rounded-lg text-white hover:border-cyan-400 transition-colors">
                    {{ part.title }}
                  </a>
                {% else %}
                  <span class="px-4 py-2 bg-gradient-to-r from-cyan-500 to-purple-600 rounded-lg text-white font-semibold" aria-current="page">
                    {{ part.title }}
                  </span>
                {% endif %}
              {% endfor %}
              
              {% if paginate.next %}
                <a href="{{ paginate.next.url }}" class="px-4 py-2 bg-gray-800 border border-gray-600 rounded-lg text-white hover:border-cyan-400 transition-colors" aria-label="Page suivante">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              {% endif %}
            </nav>
          </div>
        {% endif %}

      {% else %}
      
        <!-- Empty State -->
        <div class="text-center py-20">
          <svg class="w-24 h-24 text-gray-500 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
          </svg>
          <h2 class="text-2xl font-bold text-white mb-4">Aucun article pour le moment</h2>
          <p class="text-gray-400 mb-8">Les premiers articles arrivent bient√¥t ! Restez connect√©s pour d√©couvrir nos conseils et cr√©ations.</p>
          <a href="/" class="px-8 py-4 bg-gradient-to-r from-cyan-500 to-purple-600 rounded-full text-white font-semibold transition-all duration-300 hover:scale-105">
            Retour √† l'accueil
          </a>
        </div>
      
      {% endif %}
    {% endpaginate %}

    <!-- Newsletter Signup -->
    <div class="mt-20 bg-gradient-to-r from-gray-800/50 to-gray-900/50 rounded-3xl p-8 lg:p-12 border border-gray-700 text-center">
      <h3 class="text-2xl lg:text-3xl font-bold mb-4" style="background: linear-gradient(45deg, #00f5ff, #a855f7, #ec4899); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
        üìß Restez Inform√© !
      </h3>
      <p class="text-gray-300 mb-6">
        Recevez nos derniers articles, conseils d'experts et offres exclusives directement dans votre bo√Æte mail.
      </p>
      
      <form class="max-w-md mx-auto flex gap-4" action="/contact#newsletter" method="post">
        <input 
          type="email" 
          name="contact[email]"
          placeholder="Votre email..." 
          class="flex-1 px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:border-cyan-400 focus:outline-none"
          required
        />
        <button 
          type="submit"
          class="px-6 py-3 bg-gradient-to-r from-cyan-500 to-purple-600 rounded-lg text-white font-semibold transition-all duration-300 hover:scale-105"
        >
          S'abonner
        </button>
      </form>
      
      <p class="text-xs text-gray-500 mt-4">
        üîí Vos donn√©es sont prot√©g√©es. D√©sabonnement possible √† tout moment.
      </p>
    </div>
  </div>
</div>

<!-- SEO Meta Tags -->
<script>
document.title = '{{ page_title }}';
if (document.querySelector('meta[name="description"]')) {
  document.querySelector('meta[name="description"]').setAttribute('content', '{{ page_description }}');
}
</script>

<style>
/* Article hover effects */
.group:hover {
  transform: translateY(-5px) scale(1.02);
}

/* Filter buttons animation */
.filter-btn {
  position: relative;
  overflow: hidden;
}

.filter-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.filter-btn:hover::before {
  left: 100%;
}
</style>
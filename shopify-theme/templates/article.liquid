{% comment %}
  Template Article - Page d'article de blog
{% endcomment %}

<div class="min-h-screen bg-gray-900 text-white py-20">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Breadcrumb -->
    <nav class="mb-8">
      <ol class="flex items-center space-x-2 text-sm text-gray-400">
        <li><a href="/" class="hover:text-cyan-400 transition-colors">Accueil</a></li>
        <li><span class="mx-2">/</span></li>
        <li><a href="{{ blog.url }}" class="hover:text-cyan-400 transition-colors">{{ blog.title }}</a></li>
        <li><span class="mx-2">/</span></li>
        <li class="text-white">{{ article.title | truncate: 50 }}</li>
      </ol>
    </nav>

    <!-- Article Header -->
    <header class="text-center mb-12">
      <!-- Tags -->
      {% if article.tags.size > 0 %}
        <div class="flex flex-wrap justify-center gap-2 mb-6">
          {% for tag in article.tags %}
            <span class="px-3 py-1 bg-cyan-500/20 border border-cyan-500/30 rounded-full text-cyan-300 text-sm">
              {{ tag }}
            </span>
          {% endfor %}
        </div>
      {% endif %}
      
      <!-- Title -->
      <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-6 leading-tight">
        <span class="neon-text-gradient">{{ article.title }}</span>
      </h1>
      
      <!-- Meta Info -->
      <div class="flex flex-wrap justify-center items-center gap-6 text-gray-400 mb-8">
        {% if article.author != blank %}
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span>{{ article.author }}</span>
          </div>
        {% endif %}
        
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <span>{{ article.published_at | date: '%d %B %Y' }}</span>
        </div>
        
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>{{ article.content | strip_html | split: ' ' | size | divided_by: 200 | at_least: 1 }} min de lecture</span>
        </div>
      </div>
      
      <!-- Excerpt -->
      {% if article.excerpt != blank %}
        <p class="text-xl text-gray-300 leading-relaxed max-w-3xl mx-auto">
          {{ article.excerpt }}
        </p>
      {% endif %}
    </header>

    <!-- Featured Image -->
    {% if article.image %}
      <div class="mb-12">
        <div class="aspect-video overflow-hidden rounded-2xl border border-gray-700">
          <img 
            src="{{ article.image | img_url: '1200x600' }}" 
            alt="{{ article.image.alt | escape }}"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    {% endif %}

    <!-- Article Content -->
    <div class="prose prose-invert prose-lg max-w-none mb-12">
      <div class="article-content">
        {{ article.content }}
      </div>
    </div>

    <!-- Share Buttons -->
    <div class="flex items-center justify-center gap-4 mb-12 p-6 bg-gradient-to-r from-gray-800/50 to-gray-900/50 rounded-2xl border border-gray-700">
      <span class="text-gray-300 font-medium">Partager cet article :</span>
      
      <a href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url }}{{ article.url }}" target="_blank" class="w-10 h-10 bg-blue-600 hover:bg-blue-700 rounded-full flex items-center justify-center text-white transition-colors">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
        </svg>
      </a>
      
      <a href="https://twitter.com/intent/tweet?url={{ shop.url }}{{ article.url }}&text={{ article.title | url_encode }}" target="_blank" class="w-10 h-10 bg-sky-500 hover:bg-sky-600 rounded-full flex items-center justify-center text-white transition-colors">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
        </svg>
      </a>
      
      <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ shop.url }}{{ article.url }}" target="_blank" class="w-10 h-10 bg-blue-700 hover:bg-blue-800 rounded-full flex items-center justify-center text-white transition-colors">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
      </a>
      
      <button onclick="copyToClipboard('{{ shop.url }}{{ article.url }}')" class="w-10 h-10 bg-gray-600 hover:bg-gray-700 rounded-full flex items-center justify-center text-white transition-colors" title="Copier le lien">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
        </svg>
      </button>
    </div>

    <!-- Related Articles -->
    {% assign related_articles = blog.articles | where: 'id', '!=', article.id | limit: 3 %}
    {% if related_articles.size > 0 %}
      <div class="mb-12">
        <h3 class="text-2xl font-bold mb-8 text-center neon-text-cyan">
          Articles Similaires
        </h3>
        
        <div class="grid md:grid-cols-3 gap-6">
          {% for related_article in related_articles %}
            <div class="group">
              <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl overflow-hidden border border-gray-700 transition-all duration-300 hover:border-cyan-500/50 hover:shadow-lg hover:shadow-cyan-500/20">
                
                <!-- Image -->
                <div class="aspect-video overflow-hidden">
                  {% if related_article.image %}
                    <img 
                      src="{{ related_article.image | img_url: '400x300' }}" 
                      alt="{{ related_article.title }}"
                      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
                    />
                  {% else %}
                    <div class="w-full h-full bg-gradient-to-br from-cyan-500/20 to-purple-500/20 flex items-center justify-center">
                      <svg class="w-12 h-12 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                      </svg>
                    </div>
                  {% endif %}
                </div>
                
                <!-- Content -->
                <div class="p-4">
                  <h4 class="text-lg font-semibold mb-2 text-white group-hover:text-cyan-400 transition-colors line-clamp-2">
                    {{ related_article.title }}
                  </h4>
                  
                  <p class="text-gray-400 text-sm mb-3 line-clamp-2">
                    {{ related_article.excerpt | default: related_article.content | strip_html | truncate: 100 }}
                  </p>
                  
                  <a 
                    href="{{ related_article.url }}"
                    class="inline-flex items-center gap-2 text-cyan-400 hover:text-cyan-300 transition-colors text-sm font-medium"
                  >
                    Lire l'article
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}

    <!-- Back to Blog -->
    <div class="text-center">
      <a 
        href="/pages/blogs"
        class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-cyan-500 to-purple-600 rounded-full text-white font-semibold transition-all duration-300 hover:scale-105"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Retour au blog
      </a>
    </div>
  </div>
</div>

<style>
/* Article Content Styling */
.article-content {
  color: #d1d5db;
  line-height: 1.8;
}

.article-content h1,
.article-content h2,
.article-content h3,
.article-content h4,
.article-content h5,
.article-content h6 {
  color: #ffffff;
  font-weight: 600;
  margin-top: 2rem;
  margin-bottom: 1rem;
}

.article-content h1 { font-size: 2rem; }
.article-content h2 { font-size: 1.75rem; }
.article-content h3 { font-size: 1.5rem; }
.article-content h4 { font-size: 1.25rem; }

.article-content p {
  margin-bottom: 1.5rem;
}

.article-content a {
  color: #00f5ff;
  text-decoration: underline;
  transition: color 0.3s ease;
}

.article-content a:hover {
  color: #00d9ff;
}

.article-content ul,
.article-content ol {
  margin-bottom: 1.5rem;
  padding-left: 2rem;
}

.article-content li {
  margin-bottom: 0.5rem;
}

.article-content blockquote {
  border-left: 4px solid #00f5ff;
  padding-left: 1.5rem;
  margin: 2rem 0;
  font-style: italic;
  color: #9ca3af;
}

.article-content img {
  border-radius: 0.5rem;
  margin: 2rem 0;
  max-width: 100%;
  height: auto;
}

.article-content code {
  background: #374151;
  padding: 0.25rem 0.5rem;
  border-radius: 0.25rem;
  font-size: 0.875rem;
  color: #00f5ff;
}

.article-content pre {
  background: #1f2937;
  padding: 1.5rem;
  border-radius: 0.5rem;
  overflow-x: auto;
  margin: 2rem 0;
}

.article-content pre code {
  background: none;
  padding: 0;
  color: #d1d5db;
}

.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
</style>

<script>
function copyToClipboard(text) {
  navigator.clipboard.writeText(text).then(function() {
    // Show success message
    const button = event.target.closest('button');
    const originalHTML = button.innerHTML;
    button.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>';
    button.classList.add('bg-green-600');
    
    setTimeout(() => {
      button.innerHTML = originalHTML;
      button.classList.remove('bg-green-600');
    }, 2000);
  }).catch(function(err) {
    console.error('Erreur lors de la copie: ', err);
  });
}
</script>
        <li><span class="mx-2">/</span></li>
        <li><a href="/collections/all" class="hover:text-cyan-400 transition-colors">N√©ons Personnalis√©s</a></li>
        <li><span class="mx-2">/</span></li>
        <li class="text-white">{{ product.title }}</li>
      </ol>
    </nav>

    <div class="grid lg:grid-cols-2 gap-12 items-start">
      
      <!-- Product Images -->
      <div class="space-y-4">
        <div class="aspect-square overflow-hidden rounded-2xl bg-gray-800 border border-gray-700">
          {% if product.featured_image %}
            <img 
              src="{{ product.featured_image | img_url: '800x800' }}" 
              alt="N√©on LED personnalis√© {{ product.title | escape }} - Fabrication fran√ßaise haut de gamme"
              class="w-full h-full object-cover"
              width="800"
              height="800"
              itemprop="image"
            />
          {% else %}
            <div class="w-full h-full flex items-center justify-center text-gray-500">
              <svg class="w-24 h-24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
          {% endif %}
        </div>
        
        <!-- Thumbnail Images -->
        {% if product.images.size > 1 %}
          <div class="grid grid-cols-4 gap-2">
            {% for image in product.images limit: 4 %}
              <div class="aspect-square overflow-hidden rounded-lg bg-gray-800 border border-gray-700 cursor-pointer hover:border-cyan-500/50 transition-colors">
                <img 
                  src="{{ image | img_url: '200x200' }}" 
                  alt="N√©on {{ product.title | escape }} - Vue {{ forloop.index }}"
                  class="w-full h-full object-cover"
                  loading="lazy"
                  width="200"
                  height="200"
                />
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>

      <!-- Product Info -->
      <div class="space-y-6" itemscope itemtype="https://schema.org/Product">
        
        <!-- Title and Price -->
        <div>
          <h1 class="text-3xl lg:text-4xl font-bold mb-4 neon-text-gradient" itemprop="name">
            {{ product.title }}
          </h1>
          
          <div class="flex items-center gap-4 mb-4" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
            <span class="text-2xl font-bold text-cyan-400" itemprop="price" content="{{ product.price | money_without_currency }}">
              {{ product.price | money }}
            </span>
            <meta itemprop="priceCurrency" content="{{ cart.currency.iso_code }}">
            <meta itemprop="availability" content="{% if product.available %}https://schema.org/InStock{% else %}https://schema.org/OutOfStock{% endif %}">
            {% if product.compare_at_price > product.price %}
              <span class="text-lg text-gray-500 line-through">
                {{ product.compare_at_price | money }}
              </span>
              <span class="px-2 py-1 bg-red-500/20 border border-red-500/30 rounded-full text-red-300 text-sm font-medium">
                -{{ product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price }}%
              </span>
            {% endif %}
          </div>
          
          <!-- Rating -->
          <div class="flex items-center gap-2 mb-6" itemprop="aggregateRating" itemscope itemtype="https://schema.org/AggregateRating">
            <div class="flex gap-1">
              {% for i in (1..5) %}
                <svg class="w-4 h-4 text-yellow-400 fill-current" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              {% endfor %}
            </div>
            <span class="text-gray-400 text-sm">(<span itemprop="ratingValue">4.8</span>/5 - <span itemprop="reviewCount">127</span> avis)</span>
          </div>
        </div>

        <!-- Description -->
        {% if product.description != blank %}
          <div class="prose prose-invert max-w-none" itemprop="description">
            <p class="text-gray-300 leading-relaxed" itemprop="description">
              {{ product.description }}
            </p>
          </div>
        {% else %}
          <div itemprop="description">
            <p class="text-gray-300 leading-relaxed">
              N√©on LED personnalis√© haut de gamme avec fabrication fran√ßaise artisanale. 
              Garantie 2 ans, installation professionnelle disponible partout en France.
            </p>
          </div>
        {% endif %}

        <!-- Product Features -->
        <div class="bg-gradient-to-r from-gray-800/50 to-gray-900/50 rounded-2xl p-4 border border-gray-700">
          <h3 class="text-lg font-semibold text-white mb-3">üéØ Caract√©ristiques Premium</h3>
          <ul class="space-y-2 text-sm text-gray-300">
            <li class="flex items-center gap-2">
              <span class="w-2 h-2 bg-green-400 rounded-full"></span>
              <span><strong>Fabrication :</strong> 100% fran√ßaise artisanale</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="w-2 h-2 bg-blue-400 rounded-full"></span>
              <span><strong>LED :</strong> Haute qualit√©, dur√©e de vie 50 000h</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="w-2 h-2 bg-purple-400 rounded-full"></span>
              <span><strong>Garantie :</strong> 2 ans pi√®ces et main d'≈ìuvre</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="w-2 h-2 bg-yellow-400 rounded-full"></span>
              <span><strong>Livraison :</strong> Express 2-3 jours France enti√®re</span>
            </li>
          </ul>
        </div>

        <!-- Product Form -->
        <form action="/cart/add" method="post" enctype="multipart/form-data" class="space-y-6" itemprop="potentialAction" itemscope itemtype="https://schema.org/BuyAction">
          
          <!-- Variants -->
          {% unless product.has_only_default_variant %}
            {% for option in product.options_with_values %}
              <div>
                <label class="block text-sm font-medium text-gray-300 mb-2">
                  {{ option.name }}
                </label>
                <div class="flex flex-wrap gap-2">
                  {% for value in option.values %}
                    <input 
                      type="radio" 
                      id="{{ option.name | handleize }}-{{ value | handleize }}" 
                      name="options[{{ option.name | escape }}]" 
                      value="{{ value | escape }}"
                      class="sr-only"
                      {% if option.selected_value == value %}checked{% endif %}
                    />
                    <label 
                      for="{{ option.name | handleize }}-{{ value | handleize }}"
                      class="px-4 py-2 border border-gray-600 rounded-lg text-sm cursor-pointer transition-all duration-300 hover:border-cyan-400 hover:text-cyan-400"
                    >
                      {{ value }}
                    </label>
                  {% endfor %}
                </div>
              </div>
            {% endfor %}
          {% endunless %}

          <!-- Quantity -->
          <div>
            <label class="block text-sm font-medium text-gray-300 mb-2">
              Quantit√©
            </label>
            <div class="flex items-center gap-4">
              <div class="flex items-center border border-gray-600 rounded-lg">
                <button type="button" class="px-3 py-2 text-gray-400 hover:text-white transition-colors" onclick="changeQuantity(-1)">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                  </svg>
                </button>
                <input 
                  type="number" 
                  id="quantity" 
                  name="quantity" 
                  value="1" 
                  min="1" 
                  class="w-16 py-2 text-center bg-transparent border-0 text-white focus:outline-none"
                />
                <button type="button" class="px-3 py-2 text-gray-400 hover:text-white transition-colors" onclick="changeQuantity(1)">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                </button>
              </div>
            </div>
          </div>

          <!-- Add to Cart Button -->
          <div class="space-y-4">
            <button 
              type="submit" 
              name="add"
              class="w-full flex items-center justify-center gap-3 px-8 py-4 bg-gradient-to-r from-cyan-500 to-purple-600 rounded-full text-white font-semibold text-lg transition-all duration-300 hover:scale-105 hover:shadow-neon-cyan"
              {% unless product.available %}disabled{% endunless %}
            >
              {% if product.available %}
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m0 0h8m-8 0a2 2 0 100 4 2 2 0 000-4zm8 0a2 2 0 100 4 2 2 0 000-4z"></path>
                </svg>
                Ajouter ce n√©on au panier
              {% else %}
                Rupture de stock
              {% endif %}
            </button>
            
            <button 
              type="button" 
              onclick="openDevisPopup()"
              class="w-full px-8 py-4 border-2 border-yellow-400 text-yellow-400 rounded-full font-semibold text-lg transition-all duration-300 hover:bg-yellow-400 hover:text-gray-900 hover:shadow-neon-yellow"
            >
              üé® Personnaliser ce n√©on LED
            </button>
          </div>

          <select name="id" class="sr-only">
            {% for variant in product.variants %}
              <option 
                value="{{ variant.id }}"
                {% if variant == product.selected_or_first_available_variant %}selected{% endif %}
                {% unless variant.available %}disabled{% endunless %}
              >
                {{ variant.title }} - {{ variant.price | money }}
              </option>
            {% endfor %}
          </select>
        </form>

        <!-- Features -->
        <div class="grid grid-cols-2 gap-4 pt-6 border-t border-gray-700">
          <div class="flex items-center gap-3">
            <div class="w-8 h-8 bg-green-500/20 rounded-full flex items-center justify-center">
              <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <span class="text-sm text-gray-300">Garantie 2 ans pi√®ces et main d'≈ìuvre</span>
          </div>
          
          <div class="flex items-center gap-3">
            <div class="w-8 h-8 bg-blue-500/20 rounded-full flex items-center justify-center">
              <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
              </svg>
            </div>
            <span class="text-sm text-gray-300">Livraison express 2-3j France</span>
          </div>
          
          <div class="flex items-center gap-3">
            <div class="w-8 h-8 bg-purple-500/20 rounded-full flex items-center justify-center">
              <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"></path>
              </svg>
            </div>
            <span class="text-sm text-gray-300">Fabrication fran√ßaise artisanale</span>
          </div>
          
          <div class="flex items-center gap-3">
            <div class="w-8 h-8 bg-yellow-500/20 rounded-full flex items-center justify-center">
              <svg class="w-4 h-4 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 100 19.5 9.75 9.75 0 000-19.5z"></path>
              </svg>
            </div>
            <span class="text-sm text-gray-300">Support expert 24/7</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Related Products -->
    {% if collections['all'].products.size > 1 %}
      <div class="mt-20">
        <h2 class="text-3xl font-bold mb-8 text-center neon-text-cyan" itemprop="headline">
          Autres N√©ons Personnalis√©s
        </h2>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {% for related_product in collections['all'].products limit: 4 %}
            {% unless related_product.id == product.id %}
              <div class="group" itemscope itemtype="https://schema.org/Product">
                <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl p-4 border border-gray-700 transition-all duration-300 hover:border-cyan-500/50 hover:shadow-lg hover:shadow-cyan-500/20">
                  <div class="aspect-square overflow-hidden rounded-lg mb-4">
                    {% if related_product.featured_image %}
                      <img 
                        src="{{ related_product.featured_image | img_url: '300x300' }}" 
                        alt="N√©on LED {{ related_product.title | escape }} - Fabrication fran√ßaise"
                        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
                        loading="lazy"
                        width="300"
                        height="300"
                        itemprop="image"
                      />
                    {% else %}
                      <div class="w-full h-full bg-gray-700 flex items-center justify-center">
                        <svg class="w-12 h-12 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                      </div>
                    {% endif %}
                  </div>
                  
                  <h3 class="text-lg font-semibold mb-2 text-white group-hover:text-cyan-400 transition-colors" itemprop="name">
                    {{ related_product.title }}
                  </h3>
                  
                  <p class="text-cyan-400 font-bold mb-3" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
                    <span itemprop="price" content="{{ related_product.price | money_without_currency }}">
                    {{ related_product.price | money }}
                    </span>
                    <meta itemprop="priceCurrency" content="{{ cart.currency.iso_code }}">
                  </p>
                  
                  <a 
                    href="{{ related_product.url }}"
                    class="block w-full text-center px-4 py-2 bg-gradient-to-r from-cyan-500 to-purple-600 rounded-lg text-white font-medium transition-all duration-300 hover:scale-105"
                  >
                    Voir ce n√©on
                  </a>
                </div>
              </div>
            {% endunless %}
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
</div>


<script>
function changeQuantity(change) {
  const quantityInput = document.getElementById('quantity');
  const currentValue = parseInt(quantityInput.value);
  const newValue = Math.max(1, currentValue + change);
  quantityInput.value = newValue;
}

// Variant selection
document.addEventListener('change', function(e) {
  if (e.target.matches('input[name^="options"]')) {
    updateVariant();
  }
});

function updateVariant() {
  const selectedOptions = {};
  document.querySelectorAll('input[name^="options"]:checked').forEach(input => {
    const optionName = input.name.match(/options\[(.*?)\]/)[1];
    selectedOptions[optionName] = input.value;
  });
  
  // Find matching variant
  const variants = {{ product.variants | json }};
  const selectedVariant = variants.find(variant => {
    return Object.keys(selectedOptions).every(option => {
      const optionIndex = {{ product.options | json }}.indexOf(option);
      return variant.options[optionIndex] === selectedOptions[option];
    });
  });
  
  if (selectedVariant) {
    // Update price
    const priceElement = document.querySelector('.text-2xl.font-bold.text-cyan-400');
    if (priceElement) {
      priceElement.textContent = new Intl.NumberFormat('fr-FR', {
        style: 'currency',
        currency: 'EUR'
      }).format(selectedVariant.price / 100);
    }
    
    // Update variant select
    const variantSelect = document.querySelector('select[name="id"]');
    if (variantSelect) {
      variantSelect.value = selectedVariant.id;
    }
    
    // Update availability
    const addToCartButton = document.querySelector('button[name="add"]');
    if (addToCartButton) {
      if (selectedVariant.available) {
        addToCartButton.disabled = false;
        addToCartButton.innerHTML = `
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m0 0h8m-8 0a2 2 0 100 4 2 2 0 000-4zm8 0a2 2 0 100 4 2 2 0 000-4z"></path>
          </svg>
          Ajouter au panier
        `;
      } else {
        addToCartButton.disabled = true;
        addToCartButton.textContent = 'Rupture de stock';
      }
    }
  }
}

// Update variant selection styling
document.addEventListener('change', function(e) {
  if (e.target.matches('input[name^="options"]')) {
    // Remove selected class from all labels in this option group
    const optionName = e.target.name;
    document.querySelectorAll(`input[name="${optionName}"] + label`).forEach(label => {
      label.classList.remove('border-cyan-400', 'text-cyan-400', 'bg-cyan-400/10');
      label.classList.add('border-gray-600');
    });
    
    // Add selected class to checked label
    const selectedLabel = document.querySelector(`input[name="${optionName}"]:checked + label`);
    if (selectedLabel) {
      selectedLabel.classList.add('border-cyan-400', 'text-cyan-400', 'bg-cyan-400/10');
      selectedLabel.classList.remove('border-gray-600');
    }
  }
});

// Initialize variant selection styling
document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('input[name^="options"]:checked').forEach(input => {
    const label = document.querySelector(`label[for="${input.id}"]`);
    if (label) {
      label.classList.add('border-cyan-400', 'text-cyan-400', 'bg-cyan-400/10');
      label.classList.remove('border-gray-600');
    }
  });
});
</script>
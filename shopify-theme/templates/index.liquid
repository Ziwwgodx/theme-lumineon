<!-- SEO Meta Tags -->
<script>
document.title = '{{ page_title }}';
if (document.querySelector('meta[name="description"]')) {
  document.querySelector('meta[name="description"]').setAttribute('content', '{{ page_description }}');
}

// Add canonical URL
if (!document.querySelector('link[rel="canonical"]')) {
  const canonical = document.createElement('link');
  canonical.rel = 'canonical';
  canonical.href = '{{ shop.url }}';
  document.head.appendChild(canonical);
}

// Add hreflang if multiple languages
{% for locale in shop.published_locales %}
  {% if locale != request.locale %}
    const hreflang = document.createElement('link');
    hreflang.rel = 'alternate';
    hreflang.hreflang = '{{ locale.iso_code }}';
    hreflang.href = '{{ locale.root_url }}';
    document.head.appendChild(hreflang);
  {% endif %}
{% endfor %}
</script>
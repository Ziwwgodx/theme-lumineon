      { name: 'Blanc Pur', value: '#ffffff', gradient: 'linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%)' },
      { name: 'Cyan √âlectrique', value: '#06b6d4', gradient: 'linear-gradient(135deg, #06b6d4 0%, #67e8f9 100%)' },

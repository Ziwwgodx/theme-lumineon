{% comment %}
  Section Main Collection Products - Grille de produits avec effets néon
{% endcomment %}

{% paginate collection.products by section.settings.products_per_page %}

<div class="collection-products-section py-12 relative overflow-hidden">
  <!-- Background Grid -->
  <div class="absolute inset-0 bg-gray-900">
    <div class="absolute inset-0 bg-gradient-to-br from-gray-800/50 to-gray-900/50"></div>
    <div class="absolute inset-0 futuristic-grid"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    {% if section.settings.enable_filtering or section.settings.enable_sorting %}
      <!-- Filters and Sort Bar -->
      <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-6 mb-12">
        
        {% if section.settings.enable_filtering %}
          <!-- Filters -->
          <div class="flex flex-wrap gap-4">
            <button class="filter-btn active px-6 py-3 rounded-full font-medium transition-all duration-300 bg-gradient-to-r from-cyan-500 to-purple-600 text-white shadow-neon-cyan" data-filter="all">
              Tous les néons
            </button>
            
            <!-- Price Filters -->
            <button class="filter-btn px-6 py-3 rounded-full font-medium transition-all duration-300 bg-gray-800 text-gray-400 hover:text-white hover:bg-gray-700 border border-gray-700 morph-button" data-filter="under-500">
              Moins de 500€
            </button>
            <button class="filter-btn px-6 py-3 rounded-full font-medium transition-all duration-300 bg-gray-800 text-gray-400 hover:text-white hover:bg-gray-700 border border-gray-700 morph-button" data-filter="500-1000">
              500€ - 1000€
            </button>
            <button class="filter-btn px-6 py-3 rounded-full font-medium transition-all duration-300 bg-gray-800 text-gray-400 hover:text-white hover:bg-gray-700 border border-gray-700 morph-button" data-filter="over-1000">
              Plus de 1000€
            </button>
            
            <!-- Category Filters -->
            {% assign categories = collection.all_tags %}
            {% for tag in categories limit: 4 %}
              <button class="filter-btn px-6 py-3 rounded-full font-medium transition-all duration-300 bg-gray-800 text-gray-400 hover:text-white hover:bg-gray-700 border border-gray-700 morph-button" data-filter="{{ tag | handle }}">
                {{ tag }}
              </button>
            {% endfor %}
          </div>
        {% endif %}

        {% if section.settings.enable_sorting %}
          <!-- Sort -->
          <div class="flex items-center gap-4">
            <label for="sort-select" class="text-sm text-gray-400 font-medium">Trier par :</label>
            <select id="sort-select" class="px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white text-sm focus:border-cyan-400 focus:outline-none transition-all duration-300 hover:border-gray-500">
              <option value="manual">Recommandés</option>
              <option value="price-ascending">Prix croissant</option>
              <option value="price-descending">Prix décroissant</option>
              <option value="title-ascending">A-Z</option>
              <option value="title-descending">Z-A</option>
              <option value="created-descending">Plus récents</option>
              <option value="best-selling">Meilleures ventes</option>
            </select>
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if collection.products.size > 0 %}
      
      <!-- Products Grid -->
      <div id="products-grid" class="grid grid-cols-1 md:grid-cols-{{ section.settings.columns_mobile }} lg:grid-cols-{{ section.settings.columns_desktop }} gap-8" itemscope itemtype="https://schema.org/ItemList">
        {% for product in collection.products %}
          <div class="product-item group interactive-card" 
               data-price="{{ product.price }}"
               data-title="{{ product.title | downcase }}"
               data-date="{{ product.created_at | date: '%s' }}"
               data-tags="{{ product.tags | join: ',' | downcase }}"
               itemscope itemtype="https://schema.org/Product"
               itemprop="itemListElement">
            
            <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl overflow-hidden border border-gray-700 transition-all duration-500 hover:border-cyan-500/70 hover:shadow-2xl hover:shadow-cyan-500/40 h-full flex flex-col">
              
              <!-- Product Image -->
              <div class="relative overflow-hidden {% if section.settings.image_ratio == 'square' %}aspect-square{% elsif section.settings.image_ratio == 'portrait' %}aspect-[3/4]{% else %}aspect-video{% endif %}">
                {% if product.featured_image %}
                  <img 
                    src="{{ product.featured_image | img_url: '600x600' }}" 
                    alt="Néon LED {{ product.title | escape }} - Fabrication française haut de gamme"
                    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 group-hover:brightness-110"
                    loading="lazy"
                    width="600"
                    height="600"
                    itemprop="image"
                  />
                  
                  {% if section.settings.show_secondary_image and product.images[1] %}
                    <img 
                      src="{{ product.images[1] | img_url: '600x600' }}" 
                      alt="Néon LED {{ product.title | escape }} - Vue alternative"
                      class="absolute inset-0 w-full h-full object-cover transition-all duration-700 opacity-0 group-hover:opacity-100 group-hover:scale-110"
                      loading="lazy"
                      width="600"
                      height="600"
                    />
                  {% endif %}
                {% else %}
                  <div class="w-full h-full bg-gradient-to-br from-gray-700 to-gray-800 flex items-center justify-center">
                    <svg class="w-16 h-16 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                {% endif %}
                
                <!-- Sale Badge -->
                {% if product.compare_at_price > product.price %}
                  <div class="absolute top-3 left-3 px-3 py-1 bg-gradient-to-r from-red-500 to-pink-600 rounded-full text-white text-xs font-bold shadow-lg animate-pulse">
                    -{{ product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price }}%
                  </div>
                {% endif %}
                
                <!-- Quick Actions -->
                <div class="absolute top-3 right-3 opacity-0 group-hover:opacity-100 transition-all duration-300 flex flex-col gap-2">
                  <button 
                    onclick="quickView('{{ product.handle }}')"
                    class="w-10 h-10 bg-black/70 backdrop-blur-sm rounded-full flex items-center justify-center text-white hover:bg-cyan-500 hover:scale-110 transition-all duration-300"
                    title="Aperçu rapide"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                  </button>
                  
                  <button 
                    onclick="addToWishlist('{{ product.id }}')"
                    class="w-10 h-10 bg-black/70 backdrop-blur-sm rounded-full flex items-center justify-center text-white hover:bg-pink-500 hover:scale-110 transition-all duration-300"
                    title="Ajouter aux favoris"
                  >
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                    </svg>
                  </button>
                </div>
                
                <!-- Availability Badge -->
                {% unless product.available %}
                  <div class="absolute inset-0 bg-black/60 flex items-center justify-center">
                    <span class="bg-red-500 text-white px-4 py-2 rounded-full font-semibold">Rupture de stock</span>
                  </div>
                {% endunless %}
              </div>

              <!-- Product Info -->
              <div class="p-6 flex-1 flex flex-col">
                
                <!-- Vendor -->
                {% if section.settings.show_vendor and product.vendor != blank %}
                  <div class="text-xs text-gray-400 mb-2 uppercase tracking-wide">{{ product.vendor }}</div>
                {% endif %}
                
                <!-- Title -->
                <h3 class="text-lg font-semibold mb-3 text-white group-hover:text-cyan-400 transition-colors duration-300 line-clamp-2 flex-1" itemprop="name">
                  <a href="{{ product.url }}" class="hover:text-cyan-400 transition-colors">
                    {{ product.title }}
                  </a>
                </h3>
                
                <!-- Description -->
                {% if product.description != blank %}
                  <p class="text-gray-400 text-sm mb-4 line-clamp-2" itemprop="description">
                    {{ product.description | strip_html | truncate: 120 }}
                  </p>
                {% else %}
                  <p class="text-gray-400 text-sm mb-4 line-clamp-2" itemprop="description">
                    Néon LED personnalisé haut de gamme avec fabrication française artisanale et garantie 2 ans.
                  </p>
                {% endif %}
                
                <!-- Rating -->
                {% if section.settings.show_rating %}
                  <div class="flex items-center gap-2 mb-4" itemprop="aggregateRating" itemscope itemtype="https://schema.org/AggregateRating">
                    <div class="flex gap-1">
                      {% for i in (1..5) %}
                        <svg class="w-4 h-4 text-yellow-400 fill-current" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                      {% endfor %}
                    </div>
                    <span class="text-xs text-gray-500">(127)</span>
                    <meta itemprop="ratingValue" content="4.8">
                    <meta itemprop="reviewCount" content="127">
                  </div>
                {% endif %}
                
                <!-- Price -->
                <div class="flex items-center justify-between mb-4" itemprop="offers" itemscope itemtype="https://schema.org/Offer">
                  <div class="flex items-center gap-2">
                    <span class="text-xl font-bold text-cyan-400" itemprop="price" content="{{ product.price | money_without_currency }}">
                      {{ product.price | money }}
                    </span>
                    <meta itemprop="priceCurrency" content="{{ cart.currency.iso_code }}">
                    <meta itemprop="availability" content="{% if product.available %}https://schema.org/InStock{% else %}https://schema.org/OutOfStock{% endif %}">
                    {% if product.compare_at_price > product.price %}
                      <span class="text-sm text-gray-500 line-through">
                        {{ product.compare_at_price | money }}
                      </span>
                    {% endif %}
                  </div>
                  
                  <!-- Stock Status -->
                  {% if product.available %}
                    <span class="text-xs text-green-400 bg-green-500/20 px-2 py-1 rounded-full">En stock</span>
                  {% else %}
                    <span class="text-xs text-red-400 bg-red-500/20 px-2 py-1 rounded-full">Rupture</span>
                  {% endif %}
                </div>

                <!-- Product Tags -->
                {% if product.tags.size > 0 %}
                  <div class="flex flex-wrap gap-1 mb-4">
                    {% for tag in product.tags limit: 3 %}
                      <span class="text-xs px-2 py-1 bg-purple-500/20 border border-purple-500/30 rounded-full text-purple-300">
                        {{ tag }}
                      </span>
                    {% endfor %}
                  </div>
                {% endif %}

                <!-- Actions -->
                <div class="flex gap-2 mt-auto">
                  <a 
                    href="{{ product.url }}"
                    class="flex-1 text-center px-4 py-3 bg-gradient-to-r from-cyan-500 to-purple-600 rounded-lg text-white font-medium transition-all duration-300 hover:scale-105 hover:shadow-neon-cyan"
                  >
                    Voir ce néon
                  </a>
                  
                  {% if product.available %}
                    <button 
                      onclick="quickAddToCart({{ product.selected_or_first_available_variant.id }}, '{{ product.title | escape }}')"
                      class="px-4 py-3 border-2 border-cyan-400 text-cyan-400 rounded-lg font-medium transition-all duration-300 hover:bg-cyan-400 hover:text-gray-900 hover:scale-105"
                      title="Ajouter au panier"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m0 0h8m-8 0a2 2 0 100 4 2 2 0 000-4zm8 0a2 2 0 100 4 2 2 0 000-4z"></path>
                      </svg>
                    </button>
                  {% else %}
                    <button 
                      onclick="openDevisPopup()"
                      class="px-4 py-3 border-2 border-yellow-400 text-yellow-400 rounded-lg font-medium transition-all duration-300 hover:bg-yellow-400 hover:text-gray-900 hover:scale-105"
                      title="Demander un devis"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                      </svg>
                    </button>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>

      <!-- Pagination -->
      {% if paginate.pages > 1 %}
        <div class="mt-16 flex justify-center">
          <nav class="flex items-center gap-2" aria-label="Pagination">
            {% if paginate.previous %}
              <a href="{{ paginate.previous.url }}" class="px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white hover:border-cyan-400 hover:text-cyan-400 transition-all duration-300 hover:scale-105">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
              </a>
            {% endif %}
            
            {% for part in paginate.parts %}
              {% if part.is_link %}
                <a href="{{ part.url }}" class="px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white hover:border-cyan-400 hover:text-cyan-400 transition-all duration-300 hover:scale-105">
                  {{ part.title }}
                </a>
              {% else %}
                <span class="px-4 py-3 bg-gradient-to-r from-cyan-500 to-purple-600 rounded-lg text-white font-semibold shadow-neon-cyan" aria-current="page">
                  {{ part.title }}
                </span>
              {% endif %}
            {% endfor %}
            
            {% if paginate.next %}
              <a href="{{ paginate.next.url }}" class="px-4 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white hover:border-cyan-400 hover:text-cyan-400 transition-all duration-300 hover:scale-105">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            {% endif %}
          </nav>
        </div>
      {% endif %}

    {% else %}
      
      <!-- Empty State -->
      <div class="text-center py-20">
        <div class="max-w-md mx-auto">
          <svg class="w-24 h-24 text-gray-500 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
          </svg>
          <h3 class="text-2xl font-bold text-white mb-4">Aucun produit trouvé</h3>
          <p class="text-gray-400 mb-8">Cette collection ne contient aucun produit pour le moment ou vos filtres sont trop restrictifs.</p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <button onclick="clearFilters()" class="px-6 py-3 bg-gray-800 border border-gray-600 rounded-lg text-white hover:border-cyan-400 hover:text-cyan-400 transition-all duration-300">
              Effacer les filtres
            </button>
            <button onclick="openDevisPopup()" class="px-6 py-3 bg-gradient-to-r from-cyan-500 to-purple-600 rounded-lg text-white font-semibold transition-all duration-300 hover:scale-105">
              Créer un néon sur mesure
            </button>
          </div>
        </div>
      </div>
      
    {% endif %}
  </div>
</div>

<!-- Quick View Modal -->
<div id="quick-view-modal" class="fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center p-4 hidden">
  <div class="relative max-w-4xl w-full max-h-[90vh] overflow-hidden">
    <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-3xl border border-gray-700 overflow-hidden">
      <div class="flex items-center justify-between p-6 border-b border-gray-700">
        <h3 class="text-xl font-bold text-white">Aperçu rapide</h3>
        <button onclick="closeQuickView()" class="text-gray-400 hover:text-white transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div id="quick-view-content" class="p-6 max-h-[70vh] overflow-y-auto">
        <!-- Content loaded by JavaScript -->
      </div>
    </div>
  </div>
</div>

<script>
// Collection Products JavaScript
document.addEventListener('DOMContentLoaded', function() {
  initializeFilters();
  initializeSorting();
  initializeQuickActions();
});

// Filter functionality
function initializeFilters() {
  const filterBtns = document.querySelectorAll('.filter-btn');
  const productItems = document.querySelectorAll('.product-item');

  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const filter = btn.dataset.filter;
      
      // Update active button
      filterBtns.forEach(b => {
        b.classList.remove('active', 'bg-gradient-to-r', 'from-cyan-500', 'to-purple-600', 'text-white', 'shadow-neon-cyan');
        b.classList.add('bg-gray-800', 'text-gray-400', 'border', 'border-gray-700');
      });
      btn.classList.add('active', 'bg-gradient-to-r', 'from-cyan-500', 'to-purple-600', 'text-white', 'shadow-neon-cyan');
      btn.classList.remove('bg-gray-800', 'text-gray-400', 'border', 'border-gray-700');

      // Filter items
      productItems.forEach(item => {
        const price = parseInt(item.dataset.price);
        const tags = item.dataset.tags.toLowerCase();
        let show = false;

        switch(filter) {
          case 'all':
            show = true;
            break;
          case 'under-500':
            show = price < 50000; // Price in cents
            break;
          case '500-1000':
            show = price >= 50000 && price <= 100000;
            break;
          case 'over-1000':
            show = price > 100000;
            break;
          default:
            show = tags.includes(filter);
            break;
        }

        if (show) {
          item.style.display = 'block';
          setTimeout(() => item.classList.add('animate-in'), 100);
        } else {
          item.style.display = 'none';
          item.classList.remove('animate-in');
        }
      });
    });
  });
}

// Sort functionality
function initializeSorting() {
  const sortSelect = document.getElementById('sort-select');
  if (!sortSelect) return;
  
  sortSelect.addEventListener('change', () => {
    const sortValue = sortSelect.value;
    const grid = document.getElementById('products-grid');
    const items = Array.from(document.querySelectorAll('.product-item'));

    items.sort((a, b) => {
      switch(sortValue) {
        case 'price-ascending':
          return parseInt(a.dataset.price) - parseInt(b.dataset.price);
        case 'price-descending':
          return parseInt(b.dataset.price) - parseInt(a.dataset.price);
        case 'title-ascending':
          return a.dataset.title.localeCompare(b.dataset.title);
        case 'title-descending':
          return b.dataset.title.localeCompare(a.dataset.title);
        case 'created-descending':
          return parseInt(b.dataset.date) - parseInt(a.dataset.date);
        default:
          return 0;
      }
    });

    // Reorder DOM elements
    items.forEach(item => grid.appendChild(item));
  });
}

// Quick actions
function initializeQuickActions() {
  // Initialize any additional quick action functionality
}

// Quick add to cart
function quickAddToCart(variantId, productTitle) {
  const formData = new FormData();
  formData.append('id', variantId);
  formData.append('quantity', 1);

  // Show loading state
  event.target.innerHTML = '<svg class="w-5 h-5 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path></svg>';
  event.target.disabled = true;

  fetch('/cart/add.js', {
    method: 'POST',
    body: formData
  })
  .then(response => response.json())
  .then(data => {
    // Update cart count
    updateCartCount();
    
    // Show success notification
    showCartNotification(productTitle);
    
    // Reset button
    event.target.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m0 0h8m-8 0a2 2 0 100 4 2 2 0 000-4zm8 0a2 2 0 100 4 2 2 0 000-4z"></path></svg>';
    event.target.disabled = false;
  })
  .catch(error => {
    console.error('Error:', error);
    showNotification('Erreur lors de l\'ajout au panier', 'error');
    
    // Reset button
    event.target.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m0 0h8m-8 0a2 2 0 100 4 2 2 0 000-4zm8 0a2 2 0 100 4 2 2 0 000-4z"></path></svg>';
    event.target.disabled = false;
  });
}

// Show cart notification
function showCartNotification(productName) {
  // Trigger the cart notification from header
  if (typeof window.showCartNotification === 'function') {
    window.showCartNotification(productName);
  } else {
    showNotification(`${productName} ajouté au panier !`, 'success');
  }
}

// Quick view
function quickView(productHandle) {
  const modal = document.getElementById('quick-view-modal');
  const content = document.getElementById('quick-view-content');
  
  // Show modal
  modal.classList.remove('hidden');
  document.body.style.overflow = 'hidden';
  
  // Load product data
  fetch(`/products/${productHandle}.js`)
    .then(response => response.json())
    .then(product => {
      content.innerHTML = `
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <img src="${product.featured_image}" alt="${product.title}" class="w-full rounded-lg">
          </div>
          <div>
            <h3 class="text-2xl font-bold text-white mb-4">${product.title}</h3>
            <div class="text-2xl font-bold text-cyan-400 mb-4">${new Intl.NumberFormat('fr-FR', {style: 'currency', currency: 'EUR'}).format(product.price / 100)}</div>
            <p class="text-gray-300 mb-6">${product.description}</p>
            <div class="flex gap-4">

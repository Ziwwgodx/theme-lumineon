{% comment %}
  Section Expertise Banner - Bandeau expertise
{% endcomment %}

<div class="bg-gradient-to-r from-indigo-500/20 to-purple-500/20 border-y border-indigo-500/30 py-4 px-4 relative overflow-hidden">
  <!-- Floating Icons -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-1/2 left-1/4 transform -translate-y-1/2 text-indigo-400/30 animate-bounce">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
      </svg>
    </div>
    <div class="absolute top-1/2 right-1/4 transform -translate-y-1/2 text-purple-400/30 animate-bounce animation-delay-2000">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976-2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
      </svg>
    </div>
  </div>
  
  <div class="relative z-10 max-w-7xl mx-auto">
    <div class="flex flex-wrap justify-center items-center gap-6 lg:gap-12">
      
      <!-- Experience -->
      <div class="flex items-center gap-2 text-indigo-300">
        <span class="text-xl">🎯</span>
        <span class="font-bold text-lg">{{ section.settings.experience | default: '10+ ANS' }}</span>
        <span class="font-medium">{{ section.settings.experience_text | default: 'd\'expertise néon' }}</span>
      </div>
      
      <!-- Certifications -->
      <div class="flex items-center gap-2 text-purple-300">
        <svg class="w-5 h-5 fill-current" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
        <span class="font-medium">🏅 {{ section.settings.certification | default: 'Artisans Certifiés' }}</span>
      </div>
      
      <!-- Made in France -->
      <div class="flex items-center gap-2 text-blue-300">
        <span class="text-xl">🇫🇷</span>
        <span class="font-semibold">{{ section.settings.origin | default: 'Made in France' }}</span>
      </div>
      
      <!-- Projects Count -->
      <div class="flex items-center gap-2 text-green-300">
        <svg class="w-5 h-5 animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        <span class="font-medium">📊 {{ section.settings.projects_count | default: '+500 projets réalisés' }}</span>
      </div>
      
      <!-- Team -->
      <div class="flex items-center gap-2 text-pink-300">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
        </svg>
        <span class="font-medium">👥 {{ section.settings.team_text | default: 'Équipe de 12 experts' }}</span>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Bandeau Expertise",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_banner",
      "label": "Afficher le bandeau",
      "default": true
    },
    {
      "type": "text",
      "id": "experience",
      "label": "Années d'expérience",
      "default": "10+ ANS"
    },
    {
      "type": "text",
      "id": "experience_text",
      "label": "Texte expérience",
      "default": "d'expertise néon"
    },
    {
      "type": "text",
      "id": "certification",
      "label": "Certification",
      "default": "Artisans Certifiés"
    },
    {
      "type": "text",
      "id": "origin",
      "label": "Origine",
      "default": "Made in France"
    },
    {
      "type": "text",
      "id": "projects_count",
      "label": "Nombre de projets",
      "default": "+500 projets réalisés"
    },
    {
      "type": "text",
      "id": "team_text",
      "label": "Équipe",
      "default": "Équipe de 12 experts"
    }
  ],
  "presets": [
    {
      "name": "Bandeau Expertise"
    }
  ]
}
{% endschema %}
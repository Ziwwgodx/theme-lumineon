{% comment %}
  Section Cart Page - Page panier responsive avec design néon cohérent
{% endcomment %}

<style>
/* Cart Page Styles - Design cohérent avec le thème néon */
.cart-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #111827 0%, #1f2937 50%, #111827 100%);
  padding: 2rem 0;
  position: relative;
  overflow-x: hidden;
}

/* Background Effects */
.cart-bg-effects {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1;
}

.floating-orb {
  position: absolute;
  border-radius: 50%;
  opacity: 0.1;
  animation: float-orb 12s ease-in-out infinite;
  filter: blur(2px);
}

.orb-1 {
  width: 200px;
  height: 200px;
  background: radial-gradient(circle, #00f5ff, transparent);
  top: 20%;
  left: 10%;
  animation-delay: 0s;
}

.orb-2 {
  width: 150px;
  height: 150px;
  background: radial-gradient(circle, #a855f7, transparent);
  bottom: 30%;
  right: 15%;
  animation-delay: -6s;
}

@keyframes float-orb {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
    opacity: 0.1;
  }
  50% {
    transform: translateY(-30px) rotate(180deg);
    opacity: 0.15;
  }
}

.cart-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
  position: relative;
  z-index: 10;
}

/* Cart Header */
.cart-header {
  text-align: center;
  margin-bottom: 3rem;
}

.cart-title {
  font-size: clamp(2rem, 6vw, 4rem);
  font-weight: 900;
  margin-bottom: 1rem;
  background: linear-gradient(45deg, #00f5ff, #a855f7, #ec4899);
  background-size: 400% 400%;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: gradient-shift 6s ease-in-out infinite;
  text-shadow: 0 0 20px rgba(0, 245, 255, 0.5);
}

@keyframes gradient-shift {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

.cart-subtitle {
  color: #d1d5db;
  font-size: clamp(0.9rem, 2vw, 1.1rem);
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.6;
}

/* Cart Layout - Mobile First */
.cart-layout {
  display: grid;
  grid-template-columns: 1fr;
  gap: 2rem;
}

@media (min-width: 1024px) {
  .cart-layout {
    grid-template-columns: 1fr 400px;
    gap: 3rem;
  }
}

/* Cart Items Container */
.cart-items-container {
  background: linear-gradient(135deg, rgba(31, 41, 55, 0.9), rgba(55, 65, 81, 0.7));
  border-radius: 20px;
  border: 1px solid rgba(0, 245, 255, 0.2);
  backdrop-filter: blur(15px);
  overflow: hidden;
  margin-bottom: 2rem;
}

/* Individual Cart Item */
.cart-item {
  padding: 1.5rem;
  border-bottom: 1px solid rgba(75, 85, 99, 0.3);
  transition: all 0.3s ease;
  position: relative;
}

.cart-item:last-child {
  border-bottom: none;
}

.cart-item:hover {
  background: rgba(0, 245, 255, 0.05);
}

/* Mobile Layout (Default) */
.cart-item-content {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  align-items: center;
  text-align: center;
}

/* Desktop Layout */
@media (min-width: 769px) {
  .cart-item-content {
    flex-direction: row;
    align-items: center;
    text-align: left;
    gap: 1.5rem;
  }
  
  .cart-item-details {
    flex: 1;
  }
  
  .cart-item-controls {
    align-items: center;
  }
}

.cart-item-image {
  width: 80px;
  height: 80px;
  border-radius: 12px;
  object-fit: cover;
  border: 2px solid rgba(0, 245, 255, 0.3);
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.cart-item-image:hover {
  border-color: #00f5ff;
  box-shadow: 0 0 20px rgba(0, 245, 255, 0.3);
}

.cart-item-title {
  color: #ffffff;
  font-weight: 700;
  font-size: 1.1rem;
  margin-bottom: 0.5rem;
  line-height: 1.3;
}

.cart-item-variant {
  color: #9ca3af;
  font-size: 0.9rem;
  margin-bottom: 0.5rem;
}

.cart-item-price {
  color: #00f5ff;
  font-weight: bold;
  font-size: 1.2rem;
  text-shadow: 0 0 10px rgba(0, 245, 255, 0.3);
}

/* Cart Controls - Mobile Optimized */
.cart-item-controls {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  align-items: center;
  width: 100%;
}

@media (min-width: 769px) {
  .cart-item-controls {
    flex-direction: row;
    width: auto;
    gap: 1rem;
  }
}

/* Quantity Controls */
.quantity-controls {
  display: flex;
  align-items: center;
  background: rgba(31, 41, 55, 0.8);
  border: 1px solid rgba(75, 85, 99, 0.5);
  border-radius: 12px;
  overflow: hidden;
}

.quantity-btn {
  width: 44px;
  height: 44px;
  background: transparent;
  border: none;
  color: #00f5ff;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  font-size: 1.2rem;
  font-weight: bold;
}

.quantity-btn:hover:not(:disabled) {
  background: rgba(0, 245, 255, 0.1);
  color: #ffffff;
  transform: scale(1.1);
}

.quantity-btn:disabled {
  opacity: 0.3;
  cursor: not-allowed;
  transform: none;
}

.quantity-input {
  width: 60px;
  height: 44px;
  background: transparent;
  border: none;
  color: #ffffff;
  text-align: center;
  font-weight: 600;
  font-size: 1rem;
}

.quantity-input:focus {
  outline: none;
  background: rgba(0, 245, 255, 0.1);
}

/* Remove Button - Toujours Visible */
.remove-btn {
  width: 44px;
  height: 44px;
  background: linear-gradient(45deg, #ef4444, #dc2626);
  border: none;
  border-radius: 50%;
  color: white;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.remove-btn:hover {
  transform: scale(1.1) rotate(90deg);
  box-shadow: 0 0 20px rgba(239, 68, 68, 0.5);
}

/* Cart Summary */
.cart-summary {
  background: linear-gradient(135deg, rgba(31, 41, 55, 0.9), rgba(55, 65, 81, 0.7));
  border-radius: 20px;
  border: 1px solid rgba(0, 245, 255, 0.2);
  backdrop-filter: blur(15px);
  padding: 2rem;
  position: sticky;
  top: 2rem;
}

@media (max-width: 1023px) {
  .cart-summary {
    position: static;
    margin-top: 2rem;
  }
}

.cart-total-line {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 0;
  border-bottom: 1px solid rgba(75, 85, 99, 0.3);
}

.cart-total-line:last-child {
  border-bottom: none;
  font-size: 1.2rem;
  font-weight: bold;
}

.cart-total-amount {
  color: #00f5ff;
  font-weight: bold;
  text-shadow: 0 0 10px rgba(0, 245, 255, 0.3);
}

/* Checkout Button */
.checkout-btn {
  width: 100%;
  padding: 1.2rem;
  background: linear-gradient(45deg, #00f5ff, #a855f7);
  border: none;
  border-radius: 15px;
  color: white;
  font-weight: bold;
  font-size: 1.1rem;
  cursor: pointer;
  transition: all 0.3s ease;
  margin-top: 1.5rem;
  text-decoration: none;
  display: block;
  text-align: center;
}

.checkout-btn:hover {
  transform: translateY(-3px);
  box-shadow: 0 10px 30px rgba(0, 245, 255, 0.4);
}

/* Continue Shopping */
.continue-shopping {
  width: 100%;
  padding: 1rem;
  background: transparent;
  border: 2px solid rgba(0, 245, 255, 0.3);
  border-radius: 15px;
  color: #00f5ff;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  margin-top: 1rem;
  text-decoration: none;
  display: block;
  text-align: center;
}

.continue-shopping:hover {
  background: rgba(0, 245, 255, 0.1);
  border-color: #00f5ff;
}

/* Empty Cart */
.empty-cart {
  text-align: center;
  padding: 4rem 2rem;
  background: linear-gradient(135deg, rgba(31, 41, 55, 0.9), rgba(55, 65, 81, 0.7));
  border-radius: 20px;
  border: 1px solid rgba(0, 245, 255, 0.2);
  backdrop-filter: blur(15px);
}

.empty-cart-icon {
  width: 100px;
  height: 100px;
  margin: 0 auto 2rem;
  color: rgba(0, 245, 255, 0.3);
}

.empty-cart h2 {
  color: #ffffff;
  font-size: 2rem;
  margin-bottom: 1rem;
  background: linear-gradient(45deg, #00f5ff, #a855f7);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.empty-cart p {
  color: #9ca3af;
  margin-bottom: 2rem;
  font-size: 1.1rem;
}

/* Shipping Progress */
.shipping-progress {
  background: linear-gradient(135deg, rgba(31, 41, 55, 0.8), rgba(55, 65, 81, 0.6));
  border-radius: 15px;
  padding: 1.5rem;
  margin-bottom: 2rem;
  border: 1px solid rgba(16, 185, 129, 0.3);
}

.progress-bar {
  width: 100%;
  height: 8px;
  background: rgba(75, 85, 99, 0.5);
  border-radius: 4px;
  overflow: hidden;
  margin: 1rem 0;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #10b981, #059669);
  border-radius: 4px;
  transition: width 0.5s ease;
}

/* Trust Indicators */
.trust-indicators {
  display: grid;
  grid-template-columns: 1fr;
  gap: 1rem;
  margin: 2rem 0;
}

@media (min-width: 640px) {
  .trust-indicators {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1024px) {
  .trust-indicators {
    grid-template-columns: repeat(4, 1fr);
  }
}

.trust-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem;
  background: linear-gradient(135deg, rgba(31, 41, 55, 0.8), rgba(55, 65, 81, 0.6));
  border-radius: 12px;
  border: 1px solid rgba(75, 85, 99, 0.3);
  transition: all 0.3s ease;
}

.trust-item:hover {
  border-color: rgba(0, 245, 255, 0.5);
  transform: translateY(-2px);
}

.trust-icon {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.2rem;
  flex-shrink: 0;
}

.trust-text {
  flex: 1;
  min-width: 0;
}

.trust-title {
  color: #ffffff;
  font-weight: 600;
  margin-bottom: 0.25rem;
  font-size: 0.9rem;
}

.trust-description {
  color: #9ca3af;
  font-size: 0.8rem;
  line-height: 1.3;
}

/* Payment Methods */
.payment-methods {
  display: flex;
  justify-content: center;
  gap: 0.5rem;
  margin-top: 1.5rem;
  flex-wrap: wrap;
}

.payment-method {
  width: 45px;
  height: 32px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 6px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.2rem;
  transition: all 0.3s ease;
}

.payment-method:hover {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(1.1);
}

/* Loading States */
.loading {
  opacity: 0.6;
  pointer-events: none;
}

/* Messages */
.cart-message {
  padding: 1rem;
  border-radius: 12px;
  margin-bottom: 1rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-weight: 600;
}

.cart-message.success {
  background: rgba(16, 185, 129, 0.2);
  border: 1px solid rgba(16, 185, 129, 0.3);
  color: #10b981;
}

.cart-message.error {
  background: rgba(239, 68, 68, 0.2);
  border: 1px solid rgba(239, 68, 68, 0.3);
  color: #ef4444;
}

/* Animation for item removal */
@keyframes item-remove {
  0% {
    opacity: 1;
    transform: translateX(0);
    max-height: 200px;
  }
  50% {
    opacity: 0;
    transform: translateX(-100px);
    max-height: 200px;
  }
  100% {
    opacity: 0;
    transform: translateX(-100px);
    max-height: 0;
    padding: 0;
    margin: 0;
  }
}

.cart-item.removing {
  animation: item-remove 0.5s ease-out forwards;
}

/* Promo Code */
.promo-code {
  background: linear-gradient(135deg, rgba(31, 41, 55, 0.8), rgba(55, 65, 81, 0.6));
  border-radius: 15px;
  padding: 1.5rem;
  margin-bottom: 2rem;
  border: 1px solid rgba(168, 85, 247, 0.3);
}

.promo-input {
  width: 100%;
  padding: 0.8rem 1rem;
  background: rgba(55, 65, 81, 0.8);
  border: 1px solid rgba(75, 85, 99, 0.5);
  border-radius: 8px;
  color: #ffffff;
  margin-bottom: 1rem;
}

.promo-input:focus {
  outline: none;
  border-color: #a855f7;
  box-shadow: 0 0 10px rgba(168, 85, 247, 0.3);
}

.promo-btn {
  width: 100%;
  padding: 0.8rem;
  background: linear-gradient(45deg, #a855f7, #9333ea);
  border: none;
  border-radius: 8px;
  color: white;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.promo-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(168, 85, 247, 0.3);
}

/* Mobile Specific Adjustments */
@media (max-width: 768px) {
  .cart-page {
    padding: 1rem 0;
  }
  
  .cart-container {
    padding: 0 0.5rem;
  }
  
  .cart-item {
    padding: 1rem;
  }
  
  .cart-item-image {
    width: 60px;
    height: 60px;
  }
  
  .cart-item-title {
    font-size: 1rem;
  }
  
  .cart-item-price {
    font-size: 1.1rem;
  }
  
  .quantity-btn {
    width: 40px;
    height: 40px;
  }
  
  .quantity-input {
    width: 50px;
    height: 40px;
  }
  
  .remove-btn {
    width: 40px;
    height: 40px;
  }
  
  .trust-indicators {
    grid-template-columns: 1fr;
  }
  
  .trust-item {
    padding: 0.8rem;
  }
  
  .trust-icon {
    width: 35px;
    height: 35px;
  }
  
  .payment-methods {
    gap: 0.3rem;
  }
  
  .payment-method {
    width: 40px;
    height: 28px;
    font-size: 1rem;
  }
}
</style>

<div class="cart-page">
  <!-- Background Effects -->
  <div class="cart-bg-effects">
    <div class="floating-orb orb-1"></div>
    <div class="floating-orb orb-2"></div>
  </div>

  <div class="cart-container">
    
    <!-- Breadcrumb -->
    <nav class="mb-8" aria-label="Fil d'Ariane">
      <ol class="flex items-center space-x-2 text-sm text-gray-400">
        <li><a href="/" class="hover:text-cyan-400 transition-colors">Accueil</a></li>
        <li><span class="mx-2">/</span></li>
        <li class="text-white">Panier</li>
      </ol>
    </nav>

    <!-- Header -->
    <div class="cart-header">
      <h1 class="cart-title">{{ section.settings.title | default: 'Votre Panier Néon' }}</h1>
      <p class="cart-subtitle">
        {{ section.settings.subtitle | default: '🛒 Finalisez votre commande de néons LED personnalisés. Fabrication française premium, livraison express sécurisée.' }}
      </p>
    </div>

    <!-- Messages -->
    <div id="cart-messages"></div>

    <!-- Cart Content -->
    <div class="cart-layout">
      
      <!-- Cart Items -->
      <div>
        <!-- Shipping Progress -->
        {% if section.settings.show_shipping_progress %}
          <div class="shipping-progress">
            <div class="flex justify-between items-center mb-2">
              <span class="text-white font-semibold">🚚 Livraison Gratuite</span>
              <span class="text-green-400 font-bold" id="shipping-remaining">
                {% if cart.total_price >= section.settings.shipping_threshold %}
                  ✅ Livraison gratuite activée !
                {% else %}
                  Ajoutez {{ section.settings.shipping_threshold | default: 10000 | minus: cart.total_price | money }} pour la livraison gratuite
                {% endif %}
              </span>
            </div>
            <div class="progress-bar">
              <div class="progress-fill" id="shipping-progress" style="width: {{ cart.total_price | times: 100 | divided_by: section.settings.shipping_threshold | default: 10000 | at_most: 100 }}%"></div>
            </div>
            <p class="text-gray-300 text-sm">
              {% if cart.total_price >= section.settings.shipping_threshold %}
                🎉 Félicitations ! Livraison gratuite activée
              {% else %}
                Plus que {{ section.settings.shipping_threshold | default: 10000 | minus: cart.total_price | money }} pour la livraison gratuite
              {% endif %}
            </p>
          </div>
        {% endif %}

        <!-- Cart Items Container -->
        {% if cart.item_count > 0 %}
          <div class="cart-items-container" id="cart-items">
            {% for item in cart.items %}
              <div class="cart-item" data-key="{{ item.key }}" data-line="{{ forloop.index }}">
                <div class="cart-item-content">
                  
                  <!-- Image -->
                  <div class="cart-item-image-container">
                    {% if item.image %}
                      <img 
                        src="{{ item.image | img_url: '160x160' }}" 
                        alt="{{ item.product.title | escape }}"
                        class="cart-item-image"
                        loading="lazy"
                      />
                    {% else %}
                      <div class="cart-item-image bg-gray-700 flex items-center justify-center">
                        <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                      </div>
                    {% endif %}
                  </div>

                  <!-- Details -->
                  <div class="cart-item-details">
                    <h3 class="cart-item-title">{{ item.product.title }}</h3>
                    {% if item.variant.title != 'Default Title' %}
                      <p class="cart-item-variant">{{ item.variant.title }}</p>
                    {% endif %}
                    <p class="cart-item-price">{{ item.final_price | money }}</p>
                  </div>

                  <!-- Controls -->
                  <div class="cart-item-controls">
                    <!-- Quantity Controls -->
                    <div class="quantity-controls">
                      <button 
                        class="quantity-btn" 
                        onclick="updateQuantity('{{ item.key }}', {{ item.quantity | minus: 1 }})"
                        {% if item.quantity <= 1 %}disabled{% endif %}
                        title="Diminuer la quantité"
                      >
                        −
                      </button>
                      <input 
                        type="number" 
                        class="quantity-input" 
                        value="{{ item.quantity }}" 
                        min="1"
                        onchange="updateQuantity('{{ item.key }}', this.value)"
                        data-key="{{ item.key }}"
                      />
                      <button 
                        class="quantity-btn" 
                        onclick="updateQuantity('{{ item.key }}', {{ item.quantity | plus: 1 }})"
                        title="Augmenter la quantité"
                      >
                        +
                      </button>
                    </div>

                    <!-- Remove Button - Toujours Visible -->
                    <button 
                      class="remove-btn" 
                      onclick="removeItem('{{ item.key }}')"
                      title="Supprimer cet article"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        {% else %}
          <!-- Empty Cart -->
          <div class="empty-cart">
            <div class="empty-cart-icon">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-2.5 5M7 13l2.5 5m0 0h8m-8 0a2 2 0 100 4 2 2 0 000-4zm8 0a2 2 0 100 4 2 2 0 000-4z"></path>
              </svg>
            </div>
            <h2>Panier Vide</h2>
            <p>Votre panier est vide. Découvrez nos créations néon exceptionnelles !</p>
            <a href="/collections/all" class="checkout-btn">
              Découvrir nos Néons
            </a>
          </div>
        {% endif %}

        <!-- Trust Indicators -->
        <div class="trust-indicators">
          {% for block in section.blocks %}
            {% if block.type == 'trust_indicator' %}
              <div class="trust-item">
                <div class="trust-icon bg-{{ block.settings.color | default: 'green' }}-500/20">
                  {{ block.settings.icon }}
                </div>
                <div class="trust-text">
                  <div class="trust-title">{{ block.settings.title }}</div>
                  <div class="trust-description">{{ block.settings.description }}</div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <!-- Cart Summary -->
      {% if cart.item_count > 0 %}
        <div class="cart-summary">
          <h3 class="text-xl font-bold text-white mb-4">Récapitulatif</h3>
          
          <!-- Promo Code -->
          {% if section.settings.show_promo_code %}
            <div class="promo-code">
              <h4 class="text-white font-semibold mb-3">Code Promo</h4>
              <input 
                type="text" 
                class="promo-input" 
                placeholder="Entrez votre code"
                id="promo-code-input"
              />
              <button class="promo-btn" onclick="applyPromoCode()">
                Appliquer
              </button>
            </div>
          {% endif %}

          <!-- Totals -->
          <div class="cart-total-line">

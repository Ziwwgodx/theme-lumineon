</div>

<script>
// Cart functionality
let isUpdating = false;

// Update quantity with proper removal logic
async function updateQuantity(key, newQuantity) {
  if (isUpdating) return;
  
  newQuantity = parseInt(newQuantity);
  if (newQuantity < 0) newQuantity = 0;
  
  isUpdating = true;
  const cartItem = document.querySelector(`[data-key="${key}"]`);
  cartItem.classList.add('loading');
  
  try {
    const response = await fetch('/cart/change.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        id: key,
        quantity: newQuantity
      })
    });
    
    if (response.ok) {
      const cart = await response.json();
      
      if (newQuantity === 0) {
        // Remove item with animation
        cartItem.classList.add('removing');
        showMessage('Article supprimé du panier', 'success');
        setTimeout(() => {
          window.location.reload();
        }, 500);
      } else {
        // Update quantity input
        const quantityInput = cartItem.querySelector('.quantity-input');
        quantityInput.value = newQuantity;
        
        // Update minus button state
        const minusBtn = cartItem.querySelector('.quantity-btn');
        if (newQuantity <= 1) {
          minusBtn.disabled = true;
        } else {
          minusBtn.disabled = false;
        }
        
        showMessage('Quantité mise à jour', 'success');
        
        // Reload page to update totals
        setTimeout(() => {
          window.location.reload();
        }, 300);
      }
    } else {
      throw new Error('Erreur lors de la mise à jour');
    }
  } catch (error) {
    console.error('Error updating quantity:', error);
    showMessage('Erreur lors de la mise à jour du panier', 'error');
  } finally {
    isUpdating = false;
    cartItem.classList.remove('loading');
  }
}

// Remove item with confirmation
async function removeItem(key) {
  if (isUpdating) return;
  
  if (!confirm('Êtes-vous sûr de vouloir supprimer cet article ?')) {
    return;
  }
  
  // Use updateQuantity with 0 to remove
  await updateQuantity(key, 0);
}

// Apply promo code
async function applyPromoCode() {
  const promoInput = document.getElementById('promo-code-input');
  const code = promoInput.value.trim();
  
  if (!code) {
    showMessage('Veuillez entrer un code promo', 'error');
    return;
  }
  
  try {
    // Shopify discount codes are applied at checkout
    showMessage('Code promo sera appliqué au checkout', 'success');
    promoInput.value = '';
  } catch (error) {
    showMessage('Code promo invalide', 'error');
  }
}

// Show message
function showMessage(text, type) {
  const messagesContainer = document.getElementById('cart-messages');
  const message = document.createElement('div');
  message.className = `cart-message ${type}`;
  
  const icon = type === 'success' 
    ? '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>'
    : '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>';
  
  message.innerHTML = `${icon}<span>${text}</span>`;
  messagesContainer.appendChild(message);
  
  // Auto remove after 5 seconds
  setTimeout(() => {
    if (messagesContainer.contains(message)) {
      message.style.opacity = '0';
      setTimeout(() => {
        if (messagesContainer.contains(message)) {
          messagesContainer.removeChild(message);
        }
      }, 300);
    }
  }, 5000);
}

// Initialize
document.addEventListener('DOMContentLoaded', function() {
  // Handle quantity input changes
  document.querySelectorAll('.quantity-input').forEach(input => {
    input.addEventListener('blur', function() {
      const key = this.dataset.key;
      const newQuantity = parseInt(this.value);
      const originalQuantity = parseInt(this.defaultValue);
      
      if (newQuantity !== originalQuantity) {
        if (newQuantity <= 0) {
          // Ask for confirmation before removing
          if (confirm('Supprimer cet article du panier ?')) {
            updateQuantity(key, 0);
          } else {
            this.value = originalQuantity; // Reset value
          }
        } else {
          updateQuantity(key, newQuantity);
        }
      }
    });
    
    // Store original value
    input.defaultValue = input.value;
  });
});

// Update cart count in header
function updateCartCount() {
  fetch('/cart.js')
    .then(response => response.json())
    .then(cart => {
      const countElements = document.querySelectorAll('[data-cart-count]');
      countElements.forEach(element => {
        element.textContent = cart.item_count;
        if (cart.item_count > 0) {
          element.style.display = 'flex';
        } else {
          element.style.display = 'none';
        }
      });
    });
}
</script>


{% comment %}
  Section Order Tracking - Suivi de commande
{% endcomment %}

<section id="order-tracking" class="py-20 relative overflow-hidden section-transition">
  <div class="absolute inset-0 bg-gradient-to-b from-gray-900 via-gray-800 to-gray-900"></div>
  
  <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold mb-4">
        <span class="neon-text-blue">{{ section.settings.title_line_1 | default: 'Suivi' }}</span>
        <span class="text-white"> de </span>
        <span class="neon-text-green">{{ section.settings.title_line_2 | default: 'Commande' }}</span>
      </h2>
      <p class="text-gray-300 text-lg">
        {{ section.settings.description | default: 'Suivez votre n√©on personnalis√© en temps r√©el' }}
      </p>
    </div>

    <!-- Search -->
    <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl p-6 border border-gray-700 mb-8">
      <div class="flex gap-4">
        <input
          type="text"
          id="order-number-input"
          placeholder="{{ section.settings.search_placeholder | default: 'Num√©ro de commande (ex: LN2024001)' }}"
          class="flex-1 px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white focus:border-blue-400 focus:outline-none"
        />
        <button
          onclick="searchOrder()"
          class="px-6 py-3 bg-gradient-to-r from-blue-500 to-cyan-600 rounded-lg text-white font-semibold hover:scale-105 transition-all duration-300 flex items-center gap-2"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
          {{ section.settings.search_button | default: 'Rechercher' }}
        </button>
      </div>
      
      <div class="mt-4 text-sm text-gray-400">
        {{ section.settings.search_help | default: 'üí° Essayez: LN2024001 ou LN2024002 pour voir des exemples' }}
      </div>
    </div>

    <!-- Order Details (Hidden by default) -->
    <div id="order-details" class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl p-6 border border-gray-700 hidden">
      <!-- Header -->
      <div class="flex justify-between items-start mb-6">
        <div>
          <h3 id="order-title" class="text-2xl font-bold text-white mb-2"></h3>
          <p id="order-customer" class="text-gray-300"></p>
          <p id="order-product" class="text-gray-400 text-sm"></p>
        </div>
        <div class="text-right">
          <div id="order-status" class="text-lg font-semibold mb-1"></div>
          <div id="order-delivery" class="text-gray-400 text-sm"></div>
          <div id="order-tracking" class="text-blue-400 text-sm mt-1 hidden"></div>
        </div>
      </div>

      <!-- Progress Bar -->
      <div class="mb-8">
        <div class="flex justify-between text-sm text-gray-400 mb-2">
          <span>Progression</span>
          <span id="progress-percentage">0%</span>
        </div>
        <div class="w-full bg-gray-700 rounded-full h-2">
          <div id="progress-bar" class="bg-gradient-to-r from-blue-500 to-cyan-400 h-2 rounded-full transition-all duration-500" style="width: 0%"></div>
        </div>
      </div>

      <!-- Timeline -->
      <div id="timeline" class="space-y-4">
        <!-- Timeline items will be populated by JavaScript -->
      </div>

      <!-- Actions -->
      <div class="mt-8 pt-6 border-t border-gray-700 flex gap-4">
        <button class="px-4 py-2 bg-gray-700 hover:bg-gray-600 rounded-lg text-white transition-colors duration-200">
          üìß {{ section.settings.email_updates | default: 'Recevoir les mises √† jour' }}
        </button>
        <button onclick="openDevisPopup()" class="px-4 py-2 bg-gradient-to-r from-cyan-500 to-blue-600 rounded-lg text-white hover:scale-105 transition-all duration-300">
          üí¨ {{ section.settings.contact_support | default: 'Contacter le support' }}
        </button>
      </div>
    </div>

    <!-- Not Found Message (Hidden by default) -->
    <div id="order-not-found" class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl p-8 border border-gray-700 text-center hidden">
      <svg class="w-16 h-16 text-gray-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
      </svg>
      <h3 class="text-xl font-semibold text-white mb-2">
        {{ section.settings.not_found_title | default: 'Commande non trouv√©e' }}
      </h3>
      <p class="text-gray-400 mb-4">
        {{ section.settings.not_found_text | default: 'V√©rifiez votre num√©ro de commande ou contactez notre support.' }}
      </p>
      <button onclick="openDevisPopup()" class="px-6 py-2 bg-gradient-to-r from-cyan-500 to-blue-600 rounded-lg text-white hover:scale-105 transition-all duration-300">
        {{ section.settings.not_found_button | default: 'Contacter le Support' }}
      </button>
    </div>
  </div>
</section>

<script>
// Mock orders data
const mockOrders = {
  'LN2024001': {
    id: 'LN2024001',
    customer: 'Restaurant Le Gourmet',
    product: 'N√©on "OPEN" - Rouge/Blanc',
    status: 'production',
    statusText: 'En Production',
    statusColor: 'text-yellow-400',
    progress: 60,
    estimatedDelivery: '2024-12-20',
    steps: [
      { name: 'Commande valid√©e', date: '2024-12-10', completed: true },
      { name: 'Design approuv√©', date: '2024-12-11', completed: true },
      { name: 'Production en cours', date: '2024-12-12', completed: false, current: true },
      { name: 'Contr√¥le qualit√©', date: '2024-12-18', completed: false },
      { name: 'Exp√©dition', date: '2024-12-19', completed: false },
      { name: 'Livraison', date: '2024-12-20', completed: false }
    ]
  },
  'LN2024002': {
    id: 'LN2024002',
    customer: 'Bar Neon Dreams',
    product: 'Logo personnalis√© - Multicolore',
    status: 'shipped',
    statusText: 'Exp√©di√©',
    statusColor: 'text-blue-400',
    progress: 90,
    estimatedDelivery: '2024-12-15',
    trackingNumber: 'FR123456789',
    steps: [
      { name: 'Commande valid√©e', date: '2024-12-05', completed: true },
      { name: 'Design approuv√©', date: '2024-12-06', completed: true },
      { name: 'Production termin√©e', date: '2024-12-12', completed: true },
      { name: 'Contr√¥le qualit√©', date: '2024-12-13', completed: true },
      { name: 'Exp√©dition', date: '2024-12-14', completed: true, current: true },
      { name: 'Livraison', date: '2024-12-15', completed: false }
    ]
  }
};

function searchOrder() {
  const orderNumber = document.getElementById('order-number-input').value.trim();
  const orderDetails = document.getElementById('order-details');
  const orderNotFound = document.getElementById('order-not-found');
  
  // Hide both sections first
  orderDetails.classList.add('hidden');
  orderNotFound.classList.add('hidden');
  
  if (!orderNumber) return;
  
  const order = mockOrders[orderNumber];
  
  if (order) {
    // Populate order details
    document.getElementById('order-title').textContent = `Commande #${order.id}`;
    document.getElementById('order-customer').textContent = order.customer;
    document.getElementById('order-product').textContent = order.product;
    document.getElementById('order-status').textContent = order.statusText;
    document.getElementById('order-status').className = `text-lg font-semibold mb-1 ${order.statusColor}`;
    document.getElementById('order-delivery').textContent = `Livraison pr√©vue: ${new Date(order.estimatedDelivery).toLocaleDateString('fr-FR')}`;
    document.getElementById('progress-percentage').textContent = `${order.progress}%`;
    document.getElementById('progress-bar').style.width = `${order.progress}%`;
    
    // Show tracking number if available
    const trackingElement = document.getElementById('order-tracking');
    if (order.trackingNumber) {
      trackingElement.textContent = `Suivi: ${order.trackingNumber}`;
      trackingElement.classList.remove('hidden');
    } else {
      trackingElement.classList.add('hidden');
    }
    
    // Populate timeline
    const timeline = document.getElementById('timeline');
    timeline.innerHTML = '';
    
    order.steps.forEach((step, index) => {
      const stepElement = document.createElement('div');
      stepElement.className = 'flex items-center gap-4';
      
      const iconClass = step.completed 
        ? 'bg-green-500 text-white' 
        : step.current 
          ? 'bg-blue-500 text-white animate-pulse' 
          : 'bg-gray-600 text-gray-400';
      
      const icon = step.completed 
        ? '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>'
        : step.current
          ? '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>'
          : '<div class="w-3 h-3 rounded-full bg-current"></div>';
      
      const textColor = step.completed 
        ? 'text-green-400' 
        : step.current 
          ? 'text-blue-400' 
          : 'text-gray-400';
      
      stepElement.innerHTML = `
        <div class="w-8 h-8 rounded-full flex items-center justify-center ${iconClass}">
          ${icon}
        </div>
        <div class="flex-1">
          <div class="font-medium ${textColor}">
            ${step.name}
          </div>
          <div class="text-sm text-gray-500">
            ${new Date(step.date).toLocaleDateString('fr-FR')}
          </div>
        </div>
        ${step.current ? '<div class="text-blue-400 text-sm font-medium">En cours...</div>' : ''}
      `;
      
      timeline.appendChild(stepElement);
    });
    
    orderDetails.classList.remove('hidden');
  } else {
    orderNotFound.classList.remove('hidden');
  }
}

// Allow Enter key to search
document.getElementById('order-number-input').addEventListener('keypress', function(e) {
  if (e.key === 'Enter') {
    searchOrder();
  }
});
</script>


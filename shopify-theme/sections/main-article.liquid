.article-content-styled {
  color: #d1d5db;
  line-height: 1.8;
}

.article-content-styled h1,
.article-content-styled h2,
.article-content-styled h3,
.article-content-styled h4,
.article-content-styled h5,
.article-content-styled h6 {
  color: #ffffff;
  font-weight: 700;
  margin-top: 2.5rem;
  margin-bottom: 1.5rem;
  position: relative;
}

.article-content-styled h1 { 
  font-size: 2.25rem; 
  background: linear-gradient(45deg, #00f5ff, #a855f7);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.article-content-styled h2 { 
  font-size: 2rem;
  color: #00f5ff;
  text-shadow: 0 0 10px rgba(0, 245, 255, 0.3);
}

.article-content-styled h3 { 
  font-size: 1.75rem;
  color: #a855f7;
  text-shadow: 0 0 10px rgba(168, 85, 247, 0.3);
}


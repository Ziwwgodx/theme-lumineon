  counter-reset: list-counter;
}

.article-content-styled ol li {
  counter-increment: list-counter;
}

.article-content-styled ol li::before {
  content: counter(list-counter) '.';
  position: absolute;
  left: -2rem;
  color: #00f5ff;
  font-weight: bold;
  background: linear-gradient(45deg, #00f5ff, #a855f7);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.article-content-styled blockquote {
  border-left: 4px solid #00f5ff;
  padding: 1.5rem 2rem;
  margin: 2.5rem 0;
  background: linear-gradient(135deg, rgba(0, 245, 255, 0.05), rgba(168, 85, 247, 0.05));
  border-radius: 0 12px 12px 0;
  font-style: italic;
  color: #e5e7eb;
  position: relative;
}

.article-content-styled blockquote::before {
  content: '"';
  position: absolute;
  top: -10px;
  left: 15px;
  font-size: 3rem;
  color: #00f5ff;
  opacity: 0.3;
}

.article-content-styled img {
  border-radius: 12px;
  margin: 2.5rem 0;
  max-width: 100%;
  height: auto;
  border: 2px solid rgba(0, 245, 255, 0.2);
  transition: all 0.3s ease;
}

.article-content-styled img:hover {
  border-color: #00f5ff;
  box-shadow: 0 0 20px rgba(0, 245, 255, 0.3);
  transform: scale(1.02);
}

.article-content-styled code {
  background: linear-gradient(135deg, #374151, #4b5563);
  padding: 0.4rem 0.8rem;
  border-radius: 6px;
  font-size: 0.9rem;
  color: #00f5ff;
  border: 1px solid rgba(0, 245, 255, 0.2);
  font-family: 'Courier New', monospace;
}

.article-content-styled pre {
  background: linear-gradient(135deg, #1f2937, #374151);
  padding: 2rem;
  border-radius: 12px;
  overflow-x: auto;
  margin: 2.5rem 0;
  border: 1px solid rgba(0, 245, 255, 0.2);
  position: relative;
}

.article-content-styled pre::before {
  content: 'Code';

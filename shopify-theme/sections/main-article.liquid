  font-size: 1.5rem;
  color: #ec4899;
  text-shadow: 0 0 10px rgba(236, 72, 153, 0.3);
}

.article-content-styled h2::before,
.article-content-styled h3::before {
  content: '';
  position: absolute;
  bottom: -8px;
  left: 0;
  width: 60px;
  height: 3px;
  background: linear-gradient(90deg, currentColor, transparent);
  border-radius: 2px;
}

.article-content-styled p {
  margin-bottom: 1.75rem;
  font-size: 1.1rem;
}

.article-content-styled a {
  color: #00f5ff;
  text-decoration: none;
  border-bottom: 1px solid rgba(0, 245, 255, 0.3);
  transition: all 0.3s ease;
  padding-bottom: 2px;
}

.article-content-styled a:hover {
  color: #00d9ff;
  border-bottom-color: #00f5ff;
  text-shadow: 0 0 8px rgba(0, 245, 255, 0.5);
}

.article-content-styled ul,
.article-content-styled ol {
  margin-bottom: 2rem;
  padding-left: 2rem;
}

.article-content-styled li {
  margin-bottom: 0.75rem;
  position: relative;
}


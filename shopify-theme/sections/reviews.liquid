<script>
// Variables globales pour le carousel dynamique
let testimonialInterval = null;
let isUserInteracting = false;
let autoScrollSpeed = 1;

function scrollTestimonials(direction) {
  const container = document.getElementById('testimonials-container');
  if (!container) return;
  
  const scrollAmount = 350;
  
  if (direction === 'left') {
    container.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
  } else {
    container.scrollBy({ left: scrollAmount, behavior: 'smooth' });
  }
  
  pauseAutoScroll();
}

function pauseAutoScroll() {
  isUserInteracting = true;
  if (testimonialInterval) {
    clearInterval(testimonialInterval);
    testimonialInterval = null;
  }
  
  setTimeout(() => {
    if (isUserInteracting) {
      isUserInteracting = false;
      startAutoScroll();
    }
  }, 3000);
}

function startAutoScroll() {
  if (testimonialInterval) {
    clearInterval(testimonialInterval);
  }
  
  testimonialInterval = setInterval(() => {
    if (isUserInteracting) return;
    
    const container = document.getElementById('testimonials-container');
    if (!container) return;
    
    const maxScroll = container.scrollWidth - container.clientWidth;
    const currentScroll = container.scrollLeft;
    
    if (currentScroll >= maxScroll - 5) {
      container.scrollTo({ left: 0, behavior: 'auto' });
    } else {
      container.scrollBy({ left: autoScrollSpeed, behavior: 'auto' });
    }
  }, 30);
}

// Initialisation du carousel
document.addEventListener('DOMContentLoaded', function() {
  const container = document.getElementById('testimonials-container');
  if (!container) return;

  // Démarrer l'auto-scroll
  setTimeout(() => {
    if (!isUserInteracting) {
      startAutoScroll();
    }
  }, 1000);
  
  // Gestion des interactions
  container.addEventListener('mouseenter', () => {
    pauseAutoScroll();
  });
  
  container.addEventListener('mouseleave', () => {
    setTimeout(() => {
      if (!isUserInteracting) {
        startAutoScroll();
      }
    }, 1000);
  });
  
  // Pause sur scroll manuel
  let scrollTimeout;
  container.addEventListener('scroll', () => {
    if (!isUserInteracting) {
      pauseAutoScroll();
      clearTimeout(scrollTimeout);
      scrollTimeout = setTimeout(() => {
        if (!isUserInteracting) {
          startAutoScroll();
        }
      }, 2000);
    }
  });
  
  // Touch mobile
  container.addEventListener('touchstart', () => {
    pauseAutoScroll();
  });
  
  container.addEventListener('touchend', () => {
    setTimeout(() => {
      if (!isUserInteracting) {
        startAutoScroll();
      }
    }, 2000);
  });
  
  // Optimisations performance
  if ('getBattery' in navigator) {
    navigator.getBattery().then(battery => {
      if (battery.level < 0.2) {
        autoScrollSpeed = 0.5;
      }
    });
  }
  
  if ('connection' in navigator) {
    const connection = navigator.connection;
    if (connection.effectiveType === '2g' || connection.effectiveType === 'slow-2g') {
      autoScrollSpeed = 0.3;
    }
  }
});

// Redémarrage du carousel
function restartCarousel() {
  isUserInteracting = false;
  if (testimonialInterval) {
    clearInterval(testimonialInterval);
  }
  startAutoScroll();
}

// Gestion focus/blur
window.addEventListener('focus', () => {
  if (!isUserInteracting) {
    startAutoScroll();
  }
});

window.addEventListener('blur', () => {
  pauseAutoScroll();
});

// Nettoyage
window.addEventListener('beforeunload', function() {
  if (testimonialInterval) {
    clearInterval(testimonialInterval);
    testimonialInterval = null;
  }
});

// Debug
function getCarouselStatus() {
  return {
    isRunning: testimonialInterval !== null,
    isUserInteracting: isUserInteracting,
    speed: autoScrollSpeed,
    container: document.getElementById('testimonials-container') !== null
  };
}
</script>

<style>
.scrollbar-hide {
  -ms-overflow-style: none;
  scrollbar-width: none;
}
.scrollbar-hide::-webkit-scrollbar {
  display: none;
}

.line-clamp-4 {
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

#testimonials-container {
  scroll-behavior: smooth;
}

#testimonials-container .group {
  transition: all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

#testimonials-container .group:hover {
  transform: translateY(-5px) scale(1.02);
  box-shadow: 
    0 20px 40px rgba(0, 0, 0, 0.3),
    0 0 30px rgba(251, 191, 36, 0.2);
}

@media (max-width: 768px) {
  #testimonials-container .group {
    width: 300px;
  }
  
  .testimonials-nav-btn {
    display: none;
  }
}
</style>


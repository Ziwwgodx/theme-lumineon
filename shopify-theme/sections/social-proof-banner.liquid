<script>
// Live counter animation
document.addEventListener('DOMContentLoaded', function() {
  const counter = document.getElementById('live-counter');
  const baseCount = {{ section.settings.base_count | default: 127 }};
  
  // Simulate live updates
  setInterval(() => {
    if (Math.random() < 0.1) { // 10% chance every 5 seconds
      const currentCount = parseInt(counter.textContent);
      counter.textContent = currentCount + 1;
      
      // Flash effect
      counter.style.color = '#fbbf24';
      setTimeout(() => {
        counter.style.color = '#10b981';
      }, 500);
    }
  }, 5000);
  
  // Update recent activity text
  const activities = [
    "{{ section.settings.activity_1 | default: '3 devis envoy√©s dans les 2 derni√®res heures' }}",
    "{{ section.settings.activity_2 | default: '2 n√©ons command√©s aujourd\'hui' }}",
    "{{ section.settings.activity_3 | default: '1 installation termin√©e ce matin' }}",
    "{{ section.settings.activity_4 | default: '5 consultations en cours' }}"
  ];
  
  const activityElement = document.getElementById('recent-activity');
  let activityIndex = 0;
  
  setInterval(() => {
    activityIndex = (activityIndex + 1) % activities.length;
    activityElement.style.opacity = '0';
    setTimeout(() => {
      activityElement.textContent = activities[activityIndex];
      activityElement.style.opacity = '1';
    }, 300);
  }, 8000);
});
</script>


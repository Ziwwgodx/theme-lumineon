{% comment %}
  Section Main Page - Page générique avec contenu personnalisable
{% endcomment %}

<div class="min-h-screen bg-gray-900 text-white py-20">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Breadcrumb -->
    <nav class="mb-8">
      <ol class="flex items-center space-x-2 text-sm text-gray-400">
        <li><a href="/" class="hover:text-cyan-400 transition-colors">Accueil</a></li>
        <li><span class="mx-2">/</span></li>
        <li class="text-white">{{ page.title }}</li>
      </ol>
    </nav>

    <!-- Page Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
        <span class="neon-text-gradient">{{ page.title }}</span>
      </h1>
      
      {% if page.content != blank %}
        <div class="prose prose-invert prose-lg max-w-none">
          {{ page.content }}
        </div>
      {% endif %}
    </div>

    <!-- Check if this is the gallery page -->
    {% if page.handle == 'galerie' %}
      {% render 'gallery-immersive' %}
    {% else %}
      <!-- Default page content -->
      <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl p-8 border border-gray-700">
        <p class="text-gray-300 text-center">
          Contenu de la page à personnaliser via l'éditeur Shopify.
        </p>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Page Principale",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_breadcrumb",
      "label": "Afficher le fil d'Ariane",
      "default": true
    }
  ]
}
{% endschema %}
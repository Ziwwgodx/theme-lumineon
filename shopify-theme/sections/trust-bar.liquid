{% comment %}
  Section Trust Bar - Barre de confiance
{% endcomment %}

<div class="bg-gray-800/90 border-t border-gray-700 py-3 px-4 relative overflow-hidden">
  <!-- Animated Background -->
  <div class="absolute inset-0 bg-gradient-to-r from-transparent via-cyan-500/5 to-transparent animate-pulse"></div>
  
  <div class="relative z-10 max-w-7xl mx-auto">
    <div class="flex flex-wrap justify-center items-center gap-6 lg:gap-12">
      {% for block in section.blocks %}
        {% if block.type == 'trust_item' %}
          <div class="flex items-center gap-2 text-{{ block.settings.color }}-300">
            {% if block.settings.icon_type == 'emoji' %}
              <span class="text-lg">{{ block.settings.emoji }}</span>
            {% else %}
              <div class="w-5 h-5 text-{{ block.settings.color }}-400">
                {{ block.settings.svg_icon }}
              </div>
            {% endif %}
            <span class="font-medium text-sm">{{ block.settings.text }}</span>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>


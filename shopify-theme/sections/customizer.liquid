{% comment %}
  Section Customizer - Outil de personnalisation
{% endcomment %}

<section id="customizer" class="py-20 lg:py-32 relative overflow-hidden section-transition">
  <!-- Background Effects -->
  <div class="absolute inset-0 bg-gradient-to-b from-gray-900 via-gray-800 to-gray-900"></div>
  <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-yellow-400 to-transparent opacity-50"></div>
  
  <!-- Animated Background Elements -->
  <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-yellow-500/5 rounded-full blur-3xl animate-pulse"></div>
  <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-orange-500/5 rounded-full blur-3xl animate-pulse animation-delay-2000"></div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-yellow-500/20 to-orange-500/20 border border-yellow-500/30 rounded-full text-yellow-300 mb-6">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3l14 9-14 9V3z"></path>
        </svg>
        <span class="font-semibold">{{ section.settings.badge_text | default: 'NOUVEAU : Customizer 3D Interactif' }}</span>
      </div>
      
      <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
        <span class="neon-text-cyan">{{ section.settings.title_line_1 | default: 'Cr√©ez Votre N√©on' }}</span>
        <br />
        <span class="neon-text-purple">{{ section.settings.title_line_2 | default: 'En Quelques Clics' }}</span>
      </h2>
      
      <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
        {{ section.settings.description | default: 'üé® Notre customizer r&eacute;volutionnaire vous permet de concevoir votre n&eacute;on personnalis&eacute; en temps r&eacute;el. Visualisez, personnalisez, commandez - tout en une seule interface intuitive !' }}
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-16 items-center mb-20">
      <!-- Customizer Preview -->
      <div class="order-2 lg:order-1 relative">
        <div class="relative bg-gradient-to-br from-gray-800 to-gray-900 rounded-3xl p-8 border border-gray-700 overflow-hidden">
          <!-- Neon Border Effect -->
          <div class="absolute inset-0 bg-gradient-to-r from-yellow-500/20 via-orange-500/20 to-red-500/20 rounded-3xl blur-xl opacity-50"></div>
          
          <div class="relative">
            <!-- Customizer Image -->
            <div class="mb-6">
              <img
                src="{{ section.settings.customizer_image | img_url: 'master' }}"
                alt="Interface Customizer LumiN√©on"
                class="w-full h-auto rounded-lg border border-gray-600"
              />
            </div>
            
            <!-- Features Highlight -->
            <div class="grid grid-cols-2 gap-4">
              {% for block in section.blocks %}
                {% if block.type == 'feature' %}
                  <div class="flex items-center gap-3 p-3 bg-gray-800/50 rounded-lg border border-gray-700">
                    <div class="text-yellow-400">
                      {{ block.settings.icon }}
                    </div>
                    <div>
                      <div class="text-white text-sm font-medium">{{ block.settings.title }}</div>
                      <div class="text-gray-400 text-xs">{{ block.settings.description }}</div>
                    </div>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
      </div>

      <!-- Content -->
      <div class="order-1 lg:order-2">
        <h3 class="text-3xl font-bold mb-6 neon-text-yellow">
          {{ section.settings.content_title | default: 'üöÄ L&#39;Innovation Au Service De Votre Cr&eacute;ativit&eacute;' }}
        </h3>
        
        <div class="space-y-6 mb-8">
          {% for block in section.blocks %}
            {% if block.type == 'step' %}
              <div class="flex items-start gap-4">
                <div class="w-8 h-8 bg-gradient-to-r from-yellow-500 to-orange-600 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                  <span class="text-white text-sm font-bold">{{ block.settings.number }}</span>
                </div>
                <div>
                  <h4 class="text-white font-semibold mb-2">{{ block.settings.title }}</h4>
                  <p class="text-gray-400">{{ block.settings.description }}</p>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          <button onclick="window.location.href='/pages/customizer?view=customiser'" class="group flex items-center justify-center gap-3 px-8 py-4 bg-gradient-to-r from-yellow-500 to-orange-600 rounded-full text-white font-semibold text-lg transition-all duration-300 hover:scale-105 hover:shadow-neon-yellow">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"></path>
            </svg>
            {{ section.settings.cta_primary | default: 'Lancer Le Customizer' }}
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
          
          <button onclick="window.location.href='/pages/galerie'" class="px-8 py-4 border-2 border-yellow-400 text-yellow-400 rounded-full font-semibold text-lg transition-all duration-300 hover:bg-yellow-400 hover:text-gray-900 hover:shadow-neon-yellow morph-button interactive">
            {{ section.settings.cta_secondary | default: 'Voir Des Exemples' }}
          </button>
        </div>
      </div>
    </div>

    <!-- Benefits Section -->
    <div class="bg-gradient-to-r from-gray-800/50 to-gray-900/50 rounded-3xl p-8 lg:p-12 border border-gray-700">
      <div class="text-center mb-8">
        <h3 class="text-2xl lg:text-3xl font-bold mb-4 neon-text-gradient">
          {{ section.settings.benefits_title | default: 'Pourquoi Utiliser Notre Customizer ?' }}
        </h3>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {% for block in section.blocks %}
          {% if block.type == 'benefit' %}
            <div class="text-center">
              <div class="w-16 h-16 bg-gradient-to-r from-{{ block.settings.color_from }}-500 to-{{ block.settings.color_to }}-600 rounded-full flex items-center justify-center mx-auto mb-4">
                {{ block.settings.icon }}
              </div>
              <h4 class="text-xl font-semibold text-white mb-2">{{ block.settings.title }}</h4>
              <p class="text-gray-400">{{ block.settings.description }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

